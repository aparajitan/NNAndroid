<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_20sdp"
    android:layout_marginLeft="@dimen/_20sdp"
    android:layout_height="match_parent">
    <FrameLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/round_corner_dialog"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/dialog_top_color"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:text="Suggestion made by" />
            </FrameLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_17sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_gravity="center_horizontal"
                        android:layout_width="@dimen/_42sdp"


                        android:background="@drawable/img_background"
                        android:layout_height="@dimen/_42sdp">
                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_gravity="center"
                            android:padding="@dimen/_1sdp"
                            android:layout_height="@dimen/_40sdp"

                            android:src="@drawable/svg_user"
                            />

                    </FrameLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/_7sdp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_gravity=""
        android:layout_width="wrap_content"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/yellow"
        android:layout_height="wrap_content"
        android:text="Amar Dubey"

        />
    <TextView
        android:layout_gravity=""
        android:layout_width="wrap_content"
        android:textSize="@dimen/_10ssp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/text_color"
        android:layout_height="wrap_content"
        android:text="Jaypee greens"

        />

</LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_gravity="center_horizontal"
                        android:layout_width="@dimen/_42sdp"


                        android:background="@drawable/img_background"
                        android:layout_height="@dimen/_42sdp">
                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_gravity="center"
                            android:padding="@dimen/_1sdp"
                            android:layout_height="@dimen/_40sdp"

                            android:src="@drawable/svg_user"
                            />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity=""
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/_12ssp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textColor="@color/yellow"
                            android:layout_height="wrap_content"
                            android:text="Rakesh Sharma"

                            />
                        <TextView
                            android:layout_gravity=""
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/_10ssp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/text_color"
                            android:layout_height="wrap_content"
                            android:text="Jaypee greens"

                            />

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_gravity="center_horizontal"
                        android:layout_width="@dimen/_42sdp"


                        android:background="@drawable/img_background"
                        android:layout_height="@dimen/_42sdp">
                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_gravity="center"
                            android:padding="@dimen/_1sdp"
                            android:layout_height="@dimen/_40sdp"

                            android:src="@drawable/svg_user"
                            />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity=""
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/_12ssp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textColor="@color/yellow"
                            android:layout_height="wrap_content"
                            android:text="Sumit Yadav"
                            />
                        <TextView
                            android:layout_gravity=""
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/_10ssp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/text_color"
                            android:layout_height="wrap_content"
                            android:text="Jaypee greens"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:layout_gravity="end|top"
        app:cardElevation="@dimen/_15sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardBackgroundColor="@color/white"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp">

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/oval_card_background"
            app:cardCornerRadius="@dimen/_15sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp">


            <ImageView
                android:id="@+id/ic_cancel"
                android:src="@drawable/close_icon_p"
                android:layout_width="@dimen/_15sdp"
                android:layout_gravity="center"
                android:layout_height="@dimen/_15sdp" />

        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>



</FrameLayout>