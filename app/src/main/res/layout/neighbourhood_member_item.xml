<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_5sdp">

    <RelativeLayout
        android:id="@+id/category_name_iv5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/_5sdp">

        <!-- Profile Image -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_imageview"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentStart="true"
            android:src="@drawable/a2"
            android:layout_centerVertical="true" />

        <!-- Name & Desc -->
        <!-- Name & Desc -->
        <LinearLayout
            android:id="@+id/textContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/profile_imageview"
            android:layout_toStartOf="@id/block_toggle"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Member Name"
                android:textColor="@color/them_color"
                android:textSize="@dimen/_12ssp"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Status / Info"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_8ssp" />
        </LinearLayout>

        <!-- Toggle Switch -->
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/block_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:thumbTint="@color/them_color"
            android:trackTint="@color/gray"
            android:textOff=""
            android:textOn=""
            android:showText="false"
            android:layout_marginEnd="@dimen/_40sdp" />

        <!-- "Block" label to right of toggle -->
        <TextView
            android:id="@+id/block_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Block"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_10ssp"
            android:layout_marginEnd="@dimen/_5sdp"/>

    </RelativeLayout>

    <View
        android:id="@+id/vLineChatList"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color" />
</LinearLayout>


