<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_90sdp"
    xmlns:timer="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/row_rl"
        android:layout_width="@dimen/_90sdp"
        android:layout_margin="3dp"
        android:layout_height="@dimen/_90sdp">
        <VideoView
            android:id="@+id/videoView"
            android:visibility="visible"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp" />

        <com.github.barteksc.pdfviewer.PDFView
            android:id="@+id/pdfView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp" />

        <ImageView
            android:id="@+id/iv_remove_image"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignEnd="@id/pdfView"
            android:layout_centerHorizontal="true"
            android:layout_gravity="end"
            android:src="@drawable/ic_cancel_dialog" />
    </RelativeLayout>
    <TextView
        android:id="@+id/primery_image_tv"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Primery image"
        android:layout_below="@+id/row_rl"
        android:fontFamily="@font/montserrat_medium"
        android:layout_centerHorizontal="true"
        android:textColor="@color/green_color"
        android:textSize="@dimen/_10sdp"/>
</RelativeLayout>