<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".registration.FirstPageRegisteration">

        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">


           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <ImageView
                   android:layout_width="match_parent"
                   android:scaleType="fitXY"
                   android:src="@drawable/community_bg"
                   android:layout_height="@dimen/_125sdp"/>

           </FrameLayout>

            <FrameLayout
                android:background="@drawable/registeration_new_background"
                android:layout_marginTop="@dimen/_105sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom">

                    <TextView
                        android:id="@+id/tv_sign_in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="05dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="center"
                        android:text="Sign in"
                        android:textColor="@color/text_color"
                        android:textSize="16sp"
                        android:visibility="gone" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/cicle_image_view_id"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:src="@drawable/profile_b1" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center"
                            app:tint="@color/them_color"
                            android:layout_marginTop="@dimen/_32sdp"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:src="@drawable/ngh_icon_logo" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_gravity="center|center_vertical"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="Welcome to Neighbrsnook"
                            android:textColor="@color/yellow"
                            android:textSize="@dimen/_16ssp" />

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/upload_image_dimension"
                        android:layout_marginLeft="@dimen/screens_padding_left_right"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/screens_padding_left_right"
                        android:background="@drawable/round_corner_dialog">

                        <ImageView
                            android:layout_width="@dimen/_19sdp"
                            android:layout_height="@dimen/_19sdp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/first_name_icon_p" />

                        <EditText
                            android:id="@+id/first_name_id_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:background="@null"
                            android:backgroundTint="@null"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                            android:fontFamily="@font/montserrat_regular"
                            android:hint="Full Name"
                            android:inputType="textCapWords|text"
                            android:paddingLeft="@dimen/text_padding_left"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/text_color"
                            android:textSize="@dimen/text_size_short" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center_vertical|end"
                        android:text="(as per your govt ID)"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:textColor="@color/text_color"
                        android:textSize="11dp"
                        android:visibility="visible" />

                    <FrameLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/upload_image_dimension"
                        android:layout_marginLeft="@dimen/screens_padding_left_right"
                        android:layout_marginTop="@dimen/background_gap_centre"
                        android:layout_marginRight="@dimen/screens_padding_left_right"
                        android:background="@drawable/round_corner_dialog">

                        <ImageView
                            android:layout_width="@dimen/_19sdp"
                            android:layout_height="@dimen/_19sdp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/first_name_icon_p" />

                        <EditText
                            android:id="@+id/last_name_id"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:background="@null"
                            android:backgroundTint="@null"
                            android:backgroundTintMode="@null"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                            android:fontFamily="@font/montserrat_regular"
                            android:hint="Last name"
                            android:inputType="textCapSentences"
                            android:paddingLeft="@dimen/text_padding_left"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/text_color"
                            android:textSize="@dimen/text_size_short" />
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/upload_image_dimension"
                        android:layout_marginLeft="@dimen/screens_padding_left_right"
                        android:layout_marginTop="@dimen/background_gap_centre"
                        android:layout_marginRight="@dimen/screens_padding_left_right"
                        android:background="@drawable/round_corner_dialog"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginRight="15dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="Send OTP"
                            android:textColor="@color/yellow"
                            android:textSize="@dimen/_14sdp"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/phone_no_id"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/_75sdp"
                            android:background="@null"
                            android:backgroundTint="@null"
                            android:backgroundTintMode="@null"
                            android:fontFamily="@font/montserrat_regular"
                            android:hint="Phone #"
                            android:inputType="number"
                            android:maxLength="10"
                            android:paddingLeft="@dimen/text_padding_left"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/text_color"
                            android:textSize="@dimen/text_size_short"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/sent_otp"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="match_parent"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginRight="15dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="center_vertical|end"
                            android:text=" Get OTP"
                            android:textColor="@color/yellow"
                            android:textSize="@dimen/text_size_short"
                            android:visibility="visible" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="end|center_vertical">

                            <TextView
                                android:id="@+id/tv_OtpTimer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="15dp"
                                android:fontFamily="@font/montserrat_regular"
                                android:gravity="center_horizontal"
                                android:text="00:00"
                                android:textAlignment="center"
                                android:textColor="@color/text_color"
                                android:textSize="14sp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tv_resend_code"
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="15dp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:gravity="center|end"
                                android:text="@string/resend_otp"
                                android:textColor="@color/yellow"
                                android:textSize="16sp"
                                android:visibility="gone" />
                        </FrameLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/upload_image_dimension"
                        android:layout_marginLeft="@dimen/screens_padding_left_right"
                        android:id="@+id/frmOtpLayout"
                        android:layout_marginTop="@dimen/background_gap_centre"
                        android:layout_marginRight="@dimen/screens_padding_left_right"
                        android:background="@drawable/round_corner_dialog"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_padding_left"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/et_one"
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:backgroundTint="#9E9B9B"
                                android:inputType="number"
                                android:maxLength="1" />

                            <EditText
                                android:id="@+id/et_two"
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:backgroundTint="#9E9B9B"
                                android:inputType="number"
                                android:maxLength="1" />

                            <EditText
                                android:id="@+id/et_three"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:backgroundTint="#9E9B9B"
                                android:inputType="number"
                                android:maxLength="1" />

                            <EditText
                                android:id="@+id/et_four"
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:backgroundTint="#9E9B9B"
                                android:inputType="number"
                                android:maxLength="1" />

                            <EditText
                                android:id="@+id/et_five"
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:backgroundTint="#9E9B9B"
                                android:inputType="number"
                                android:maxLength="1" />

                            <EditText
                                android:id="@+id/et_six"
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:backgroundTint="#9E9B9B"
                                android:inputType="number"
                                android:maxLength="1" />

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etOtpDemo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/ok"
                                android:layout_width="@dimen/_65sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:text="Ok"
                                android:textSize="@dimen/_18sdp"
                                android:visibility="gone" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imgRightIcon"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/right_green_icon"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/imgCrossIcon"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/cross_icon_red"
                            android:visibility="gone" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/upload_image_dimension"
                        android:layout_marginLeft="@dimen/screens_padding_left_right"
                        android:layout_marginTop="@dimen/background_gap_centre"
                        android:layout_marginRight="@dimen/screens_padding_left_right"
                        android:background="@drawable/round_corner_dialog">

                        <ImageView
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/mail_icon_p" />

                        <EditText
                            android:id="@+id/email_id"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/text_padding_left"
                            android:background="@null"
                            android:backgroundTint="@null"
                            android:backgroundTintMode="@null"
                            android:fontFamily="@font/montserrat_regular"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/text_color"
                            android:textSize="@dimen/text_size_short" />
                        <TextView
                            android:id="@+id/checkeMail"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="match_parent"

                            android:layout_gravity="end|center_vertical"
                            android:layout_marginRight="15dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="center_vertical|end"
                            android:text=" Get OTP"
                            android:textColor="@color/yellow"
                            android:textSize="@dimen/text_size_short"
                            android:visibility="gone" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/upload_image_dimension"
                            android:layout_marginLeft="@dimen/screens_padding_left_right"
                            android:layout_marginTop="@dimen/_13sdp"
                            android:layout_marginRight="@dimen/screens_padding_left_right"
                            android:background="@drawable/round_corner_dialog"
                            android:visibility="visible">
                            <TextView
                                android:id="@+id/tvStrength"
                                android:layout_width="wrap_content"
                                android:layout_marginRight="@dimen/_35sdp"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:layout_marginBottom="@dimen/_15sdp"
                                android:layout_gravity="bottom|end"
                                android:fontFamily="@font/montserrat_semibold"/>
                            <ImageView
                                android:id="@+id/show_password"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="end|center_vertical"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/show_password_prsnl"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/imgHidePassword"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="end|center_vertical"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/hide_password" />

                            <EditText
                                android:id="@+id/password_id"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/_75sdp"
                                android:background="@null"
                                android:backgroundTint="@null"
                                android:backgroundTintMode="@null"
                                android:fontFamily="@font/montserrat_regular"
                                android:hint="Password"
                                android:inputType="textPassword"
                                android:paddingLeft="@dimen/text_padding_left"
                                android:textColor="@color/text_color"
                                android:textColorHint="@color/text_color"
                                android:textSize="@dimen/text_size_short" />

                        </FrameLayout>


                    </FrameLayout>
                    <FrameLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tvStrength2"
                            android:layout_width="wrap_content"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/screens_padding_left_right"
                            android:textSize="13sp"
                            android:fontFamily="@font/montserrat_medium"/>
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/upload_image_dimension"
                            android:layout_marginLeft="@dimen/screens_padding_left_right"
                            android:layout_marginTop="@dimen/_13sdp"
                            android:layout_marginRight="@dimen/screens_padding_left_right"
                            android:background="@drawable/round_corner_dialog"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/img_confirm_password"
                                android:layout_width="@dimen/_22sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:layout_gravity="end|center_vertical"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/show_password_prsnl"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/imgHidePasswordConfirm"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="end|center_vertical"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/hide_password" />

                            <EditText
                                android:id="@+id/confirm_password_id"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/_35sdp"
                                android:background="@null"
                                android:backgroundTint="@null"
                                android:backgroundTintMode="@null"
                                android:fontFamily="@font/montserrat_regular"
                                android:hint="Confirm password"
                                android:inputType="textPassword"
                                android:paddingLeft="@dimen/text_padding_left"
                                android:textColor="@color/text_color"
                                android:textColorHint="@color/text_color"
                                android:textSize="@dimen/text_size_short" />
                        </FrameLayout>

                    </FrameLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/checkbox_register"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:buttonTint="@color/text_color"
                            android:textColorHighlight="@color/text_color"
                            android:textColorHint="@color/text_color" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="5dp"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:gravity="start"
                                    android:text="I agree to your"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/text_color"
                                    android:textSize="12sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_1sdp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/terms_and_condition"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="@dimen/_4sdp"
                                        android:fontFamily="@font/montserrat_medium"
                                        android:gravity="start"
                                        android:text="Terms &amp; Conditions"
                                        android:textColor="@color/text_color"
                                        android:textSize="12sp" />
                                    <!--     <TextView
                                             android:layout_marginLeft="@dimen/_4sdp"
                                             android:layout_gravity="center_vertical"
                                             android:textColor="@color/line_color"
                                             android:gravity="start"
                                             android:background="@color/text_color"
                                             android:textSize="12sp"
                                             android:fontFamily="@font/montserrat_medium"
                                             android:layout_width="match_parent"
                                             android:layout_height="@dimen/_1sdp" />-->

                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:id="@+id/privacy_policy"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_4sdp"
                                        android:fontFamily="@font/montserrat_medium"
                                        android:gravity="start"
                                        android:text="and Privacy Policy"
                                        android:textColor="@color/text_color"
                                        android:textSize="12sp" />


                                </FrameLayout>
                                <!--       <TextView
                                           android:layout_gravity="center_vertical"
                                           android:textColor="@color/line_color"
                                           android:background="@color/text_color"
                                           android:textSize="12sp"
                                           android:fontFamily="@font/montserrat_medium"
                                           android:layout_width="match_parent"
                                           android:layout_height="@dimen/_1sdp" />-->
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/registration_id"
                        android:layout_width="@dimen/button_width"
                        android:layout_height="@dimen/button_height"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/upload_button_background"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="Next"
                            android:textColor="@color/button_text_color"
                            android:textSize="@dimen/button_size" />
                    </FrameLayout>
                    <TextView
                        android:id="@+id/you_have_accound"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center|bottom"
                        android:text="Already have an account?"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_10ssp" />
                </LinearLayout>

            </FrameLayout>


        </FrameLayout>






</FrameLayout>