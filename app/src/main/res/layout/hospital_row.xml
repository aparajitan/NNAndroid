<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    android:background="@drawable/round_corner_dialog"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <RelativeLayout
        android:id="@+id/show_hide_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/question_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/down_iv"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/_5sdp"
            android:text="name"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12ssp" />

        <ImageView
            android:id="@+id/down_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/up_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
            android:visibility="gone"
            app:tint="@color/black" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ans_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/_5sdp"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/question_tv"
            android:background="@color/divider_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <ImageView
                android:id="@+id/call_imageview1"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:src="@drawable/notyfy" />

            <TextView
                android:id="@+id/call_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toStartOf="@+id/call_imageview1"
                android:fontFamily="@font/montserrat_medium"
                android:text="9015667466"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_12ssp"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_5sdp">

            <TextView
                android:id="@+id/ans_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/call_ll"
                android:fontFamily="@font/montserrat_medium"
                android:paddingRight="@dimen/_5sdp"
                android:lines="3"
                android:text="name"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_12ssp" />

            <LinearLayout
                android:id="@+id/call_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/location"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="@dimen/_1sdp"
                    android:background="@drawable/round_corner_button_them"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_outline_location_on_24"
                    app:tint="@color/white"/>

<!--                <ImageView-->
<!--                    android:id="@+id/share_imageview"-->
<!--                    android:layout_width="@dimen/_25sdp"-->
<!--                    android:layout_height="@dimen/_25sdp"-->
<!--                    android:layout_margin="@dimen/_1sdp"-->
<!--                    android:background="@drawable/round_corner_button_them"-->
<!--                    android:padding="@dimen/_5sdp"-->
<!--                    android:src="@drawable/share"-->
<!--                    app:tint="@color/white" />-->

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/call1_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/call_ll"
            android:visibility="gone">

            <TextView
                android:id="@+id/call1_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/montserrat_medium"
                android:paddingRight="@dimen/_5sdp"
                android:text="phone1"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_12ssp" />

            <ImageView
                android:id="@+id/call_imageview"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginEnd="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:background="@drawable/round_corner_button_them"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_outline_phone_24"
                app:tint="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/call2_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/call1_rl"
            android:visibility="gone">

            <TextView
                android:id="@+id/call2_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:paddingRight="@dimen/_5sdp"
                android:text="phone2"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_12ssp" />

            <ImageView
                android:id="@+id/call_imageview2"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginEnd="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:background="@drawable/round_corner_button_them"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_outline_phone_24"
                app:tint="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/call1_rl"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtv_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/montserrat_medium"
                android:paddingRight="@dimen/_5sdp"
                android:text="https://www.maxhealthcare.in/"
                android:textColor="#2200CC"
                android:textSize="@dimen/_12ssp"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/share_imageview"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginEnd="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:background="@drawable/round_corner_button_them"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/share"
                app:tint="@color/white" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>