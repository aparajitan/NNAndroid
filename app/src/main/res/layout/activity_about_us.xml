<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/yellow">
            <FrameLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <ImageView
                    android:layout_width="@dimen/plus_icon_size"
                    android:id="@+id/plus_create_id"
                    android:src="@drawable/ic_plus_actionbar"
                    android:visibility="gone"
                    android:layout_gravity="end|center_vertical"
                    android:layout_height="@dimen/plus_icon_size" />
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:id="@+id/img_back"
                        android:src="@drawable/demo_left_p"
                        android:layout_gravity="center_vertical"
                        android:layout_height="45dp" />
                    <TextView
                        android:text="About Us"
                        android:textSize="@dimen/toolbar_text_size"
                        android:textColor="#fff"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>


            </FrameLayout>


        </androidx.appcompat.widget.Toolbar>



    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/round_corner_dialog"
        android:paddingRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/screens_padding_left_right"
        android:layout_marginRight="@dimen/screens_padding_left_right"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@mipmap/ic_launcher"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/text_color"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:text="About Us"
                style="stri"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14ssp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/about_us_detail_tv"
            android:layout_width="match_parent"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginTop="@dimen/_10sdp"
            android:justificationMode="inter_word"
            android:textColor="@color/text_color"
            android:text=""
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="gone"
            android:text="2022, Habitat Konnect LLP\nAkk rights reserved."
            android:textColor="@color/text_color"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>