<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    tools:context=".calendar.MainActivityCalendar">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/yellow">
            <FrameLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:id="@+id/img_back"
                        android:src="@drawable/demo_left_p"
                        android:layout_gravity="center_vertical"
                        android:layout_height="45dp" />
                    <TextView
                        android:text="Event"
                        android:textSize="@dimen/toolbar_text_size"
                        android:textColor="#fff"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/create_event_id"
                    android:src="@drawable/ic_plus_actionbar"
                    app:tint="@color/white"
                    android:padding="@dimen/_2sdp"
                    android:layout_width="@dimen/plus_icon_size"
                    android:background="@drawable/circle_white_solid"
                    android:visibility="visible"
                    android:layout_gravity="end|center_vertical"
                    android:layout_height="@dimen/plus_icon_size" />

            </FrameLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:visibility="gone"
        android:background="@drawable/button_back"
        android:layout_height="@dimen/_35sdp">
        <TextView
            android:layout_width="match_parent"
            android:text="CREATE EVENT"
            android:backgroundTint="@color/yellow"
            android:onClick="weeklyAction"
            android:textSize="20sp"
            android:layout_marginLeft="@dimen/_10sdp"
            tools:ignore="OnClick"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
    </FrameLayout>

    <FrameLayout
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/image_back"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_height="@dimen/_325sdp">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_background_btn"
        >
        <FrameLayout
            android:layout_width="@dimen/_60sdp"
            android:background="@drawable/button_back"
            android:layout_height="@dimen/_40sdp"
            tools:ignore="OnClick">
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/back"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:visibility="gone"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_gravity="center"
                android:onClick="previousMonthAction"

                android:visibility="visible"
                android:src="@drawable/ic_arrow_left"
                android:layout_height="@dimen/_35sdp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/back"
                android:visibility="gone"
                android:textColor="@color/teal_200"
                android:background="@null"
                android:textStyle="bold"
                android:onClick="previousMonthAction"
                android:textSize="20sp"
                tools:ignore="OnClick" />
        </FrameLayout>
        <TextView
            android:id="@+id/monthYearTV"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:text="Feb 2021"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/white"/>
        <FrameLayout
            android:layout_width="@dimen/_60sdp"
            android:background="@drawable/button_back"
            android:layout_height="@dimen/_40sdp"
            tools:ignore="OnClick">
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/back"
                android:layout_gravity="center"
                android:textSize="20sp"

                android:visibility="gone"
                android:layout_marginHorizontal="@dimen/_10ssp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_gravity="center"
                android:visibility="visible"
                android:onClick="nextMonthAction"

                android:src="@drawable/ic_arrow_right"
                android:layout_height="@dimen/_35sdp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/back"
                android:visibility="gone"
                android:textColor="@color/teal_200"
                android:background="@null"
                android:textStyle="bold"
                android:onClick="previousMonthAction"
                android:textSize="20sp"
                tools:ignore="OnClick" />
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SUN"
            android:textColor="@color/yellow"
            android:textAlignment="center"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MON"
            android:textColor="@color/yellow"
            android:textAlignment="center"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TUE"
            android:textColor="@color/yellow"
            android:textAlignment="center"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="WED"
            android:textColor="@color/yellow"
            android:textAlignment="center"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="THU"
            android:textColor="@color/yellow"
            android:textAlignment="center"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="FRI"
            android:textColor="@color/yellow"
            android:textAlignment="center"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SAT"
            android:textColor="@color/yellow"
            android:textAlignment="center"
            android:textSize="16sp"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/calendar_recycler_view"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"/>



</LinearLayout>
    </FrameLayout>


    <FrameLayout
        android:gravity="center"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_back"
        android:id="@+id/id_event"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height">

        <TextView
            android:layout_width="wrap_content"
            android:text="POST"

            android:layout_gravity="center"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/button_size"
            android:fontFamily="@font/montserrat_regular"
            android:layout_height="wrap_content"/>
    </FrameLayout>


</LinearLayout>
</LinearLayout>