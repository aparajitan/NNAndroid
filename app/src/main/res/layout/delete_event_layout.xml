<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_15sdp"
    android:layout_marginLeft="@dimen/_15sdp"
    android:layout_height="wrap_content">
    <FrameLayout
        android:orientation="vertical"
        android:background="@drawable/round_corner_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_marginTop="@dimen/dialog_padding_top_gap"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/dialog_padding_top_gap"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Are you sure you want to delete this"
                    android:textColor="@color/dialog_top_color"
                    android:textSize="@dimen/dialog_text_size" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/dialog_top_color"
                    android:textSize="@dimen/dialog_text_size"
                    android:id="@+id/productDlt"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="event?"
                    />

            </FrameLayout>
            <TextView
                android:background="@color/line_color_dialog"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_37sdp">
                <FrameLayout
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="No"
                        android:gravity="center"
                        android:id="@+id/tv_no"
                        android:textColor="#F44336"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_14ssp"
                        android:layout_height="match_parent"/>
                </FrameLayout>
                <FrameLayout
                    android:background="@color/line_color"
                    android:layout_gravity="center|top"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_40sdp"/>

                <FrameLayout
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Yes"
                        android:id="@+id/tv_yes_id"
                        android:gravity="center"
                        android:textColor="@color/green_color"
                        android:textSize="@dimen/_14ssp"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_height="match_parent"/>


                </FrameLayout>


            </LinearLayout>


        </LinearLayout>

    </FrameLayout>
    <androidx.cardview.widget.CardView
    android:layout_gravity="end|top"
    app:cardElevation="@dimen/_15sdp"
    app:cardCornerRadius="@dimen/_15sdp"
        android:visibility="gone"
    app:cardBackgroundColor="@color/white"
    android:layout_width="@dimen/_20sdp"
    android:layout_height="@dimen/_20sdp">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/oval_card_background"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_gravity="center"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp">


        <ImageView
            android:id="@+id/iv9"
            android:src="@drawable/close_icon_p"
            android:layout_width="@dimen/_15sdp"
            android:layout_gravity="center"
            android:layout_height="@dimen/_15sdp" />

    </androidx.cardview.widget.CardView>


</androidx.cardview.widget.CardView>

</FrameLayout>