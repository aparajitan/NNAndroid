                        android:layout_marginLeft="@dimen/post_property_form_left_right_padding"
                        android:fontFamily="@font/montserrat_medium"
                        android:textSize="16sp" />
                    <LinearLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginLeft="@dimen/post_property_form_left_right_padding"
                            android:layout_marginRight="@dimen/post_property_form_left_right_padding"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:visibility="visible"
                                android:background="@drawable/post_unselect_background"
                                android:layout_height="@dimen/_30sdp">
                                <TextView
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="wrap_content"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:layout_marginRight="@dimen/_7sdp"
                                    android:layout_marginLeft="@dimen/_7sdp"
                                    android:textColor="@color/text_color"
                                    android:layout_height="wrap_content"
                                    android:text="Buy"/>
                            </FrameLayout>
                            <FrameLayout
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/post_unselect_background"
                                android:layout_height="@dimen/_30sdp">
                                <TextView
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="wrap_content"
                                    android:textSize="14sp"
                                    android:layout_marginRight="@dimen/_7sdp"
                                    android:layout_marginLeft="@dimen/_7sdp"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:textColor="@color/text_color"
                                    android:layout_height="wrap_content"
                                    android:text="Rent" />
                            </FrameLayout>
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:visibility="visible"
                                android:background="@drawable/post_unselect_background"
                                android:layout_height="@dimen/_30sdp">
                                <TextView
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="wrap_content"
                                    android:textSize="14sp"
                                    android:layout_marginRight="@dimen/_7sdp"
                                    android:layout_marginLeft="@dimen/_7sdp"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:textColor="@color/text_color"
                                    android:layout_height="wrap_content"
                                    android:text="Commercial" />
                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:visibility="visible"
                                android:background="@drawable/post_select_background"
                                android:layout_height="@dimen/_30sdp">
                                <TextView
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="wrap_content"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:textColor="@color/white"
                                    android:layout_height="wrap_content"
                                    android:text="PG/CO-living"

                                    />


                            </FrameLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
