                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Localities"
                        android:textColor="#000"
                        android:layout_marginLeft="@dimen/post_property_form_left_right_padding"
                        android:fontFamily="@font/montserrat_medium"
                        android:textSize="16sp" />
                    <LinearLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginLeft="@dimen/post_property_form_left_right_padding"
                            android:layout_marginRight="@dimen/post_property_form_left_right_padding"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:background="@drawable/post_select_background"
                                android:layout_height="@dimen/_30sdp">
                                <TextView
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="wrap_content"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:textColor="@color/white"
                                    android:layout_height="wrap_content"
                                    android:text="+ Add more"/>
                            </FrameLayout>
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:textSize="14sp"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:fontFamily="@font/montserrat_regular"
                                android:textColor="@color/yellow"
                                android:layout_height="wrap_content"
                                android:text="Okhla Phase||, Industrial...." />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textColor="#000"
                        android:layout_marginLeft="@dimen/post_property_form_left_right_padding"
                        android:fontFamily="@font/montserrat_medium"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginLeft="@dimen/post_property_form_left_right_padding"
                            android:layout_marginRight="@dimen/post_property_form_left_right_padding"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:background="@drawable/post_unselect_background"
                                android:layout_height="@dimen/_30sdp">
                                <TextView
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="wrap_content"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:textColor="@color/text_color"
                                    android:layout_height="wrap_content"
                                    android:text="Boys"/>
                            </FrameLayout>
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/post_unselect_background"
                                android:layout_height="@dimen/_30sdp">
                                <TextView
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="wrap_content"
                                    android:textSize="14sp"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:textColor="@color/text_color"
                                    android:layout_height="wrap_content"
                                    android:text="Girls" />
                            </FrameLayout>
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/post_unselect_background"
                                android:layout_height="@dimen/_30sdp">
                                <TextView
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="wrap_content"
                                    android:textSize="14sp"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:textColor="@color/text_color"
                                    android:layout_height="wrap_content"
                                    android:text="Both" />
                            </FrameLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Room Type"
                        android:textColor="#000"
                        android:layout_marginLeft="@dimen/post_property_form_left_right_padding"
                        android:fontFamily="@font/montserrat_medium"
                        android:textSize="16sp" />
                    <HorizontalScrollView
                        android:layout_marginTop="@dimen/_10sdp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:paddingLeft="@dimen/post_property_form_left_right_padding"
                            android:paddingRight="@dimen/post_property_form_left_right_padding"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:background="@drawable/post_unselect_background"
                                    android:layout_height="@dimen/_30sdp">
                                    <TextView
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="wrap_content"
                                        android:textSize="14sp"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:textColor="@color/text_color"
                                        android:layout_height="wrap_content"
                                        android:text="Private Room"/>
                                </FrameLayout>
                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:background="@drawable/post_unselect_background"
                                    android:layout_height="@dimen/_30sdp">
                                    <TextView
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="wrap_content"
                                        android:textSize="14sp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:textColor="@color/text_color"
                                        android:layout_height="wrap_content"
                                        android:text="Double Sharing" />
                                </FrameLayout>
                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:background="@drawable/post_unselect_background"
                                    android:layout_height="@dimen/_30sdp">
                                    <TextView
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="wrap_content"
                                        android:textSize="14sp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:textColor="@color/text_color"
                                        android:layout_height="wrap_content"
                                        android:text="Triple Sharing" />
                                </FrameLayout>

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:background="@drawable/post_unselect_background"
                                    android:layout_height="@dimen/_30sdp">
                                    <TextView
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="wrap_content"
                                        android:textSize="14sp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:textColor="@color/text_color"
                                        android:layout_height="wrap_content"
                                        android:text="3+ Sharing" />
                                </FrameLayout>

                            </LinearLayout>

                        </LinearLayout>


                    </HorizontalScrollView>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Budget"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textColor="#000"
                    android:layout_marginLeft="@dimen/post_property_form_left_right_padding"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="16sp" />
                <FrameLayout
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/post_property_form_left_right_padding"
                    android:layout_marginLeft="@dimen/post_property_form_left_right_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/yellow"
                        android:text="₹ 0.0"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="@dimen/_10ssp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/yellow"
                        android:text="₹ 90..0k"
                        android:layout_gravity="end"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="@dimen/_10ssp"
                        android:layout_height="wrap_content"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_15sdp"
                    android:visibility="visible"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Food Available"
                        android:textColor="#000"
                        android:layout_marginLeft="@dimen/post_property_form_left_right_padding"
                        android:fontFamily="@font/montserrat_medium"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginLeft="@dimen/post_property_form_left_right_padding"
                            android:layout_marginRight="@dimen/post_property_form_left_right_padding"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:background="@drawable/post_unselect_background"
                                android:layout_height="@dimen/_30sdp">
                                <TextView
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="wrap_content"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:textColor="@color/text_color"
                                    android:layout_height="wrap_content"
                                    android:text="Yes"/>
                            </FrameLayout>
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/post_unselect_background"
                                android:layout_height="@dimen/_30sdp">
                                <TextView
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="wrap_content"
                                    android:textSize="14sp"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:textColor="@color/text_color"
                                    android:layout_height="wrap_content"
                                    android:text="No" />
                            </FrameLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <FrameLayout
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_back"
                    android:id="@+id/upload_id"
                    android:visibility="visible"
                    android:layout_marginLeft="@dimen/_45sdp"
                    android:layout_marginRight="@dimen/_45sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="View 40 Properties"
                        android:layout_gravity="center"
                        android:textColor="@color/button_text_color"
                        android:textSize="@dimen/button_size"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_height="wrap_content"/>
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>



    </ScrollView>


</LinearLayout>