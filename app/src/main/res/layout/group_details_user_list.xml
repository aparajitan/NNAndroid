<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/lnr_root"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_7sdp"
        android:background="@drawable/round_corner_dialog"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:id="@+id/l2_already_member_lyt"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_width="@dimen/_17sdp"
                    android:visibility="gone"
                    android:id="@+id/img_amit_dubey_icon"
                    android:src="@drawable/close_icon_main"
                    android:layout_height="@dimen/_17sdp"/>
                <LinearLayout

                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/img_already_member_user"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:src="@drawable/user_icon_p"/>

                    <LinearLayout
                        android:id="@+id/lnrClickProfile"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_already_member_user"
                            android:layout_gravity=""
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/_12ssp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textColor="@color/yellow"
                            android:layout_height="wrap_content"
                            android:text="Mini Patnaik" />
                        <TextView
                            android:id="@+id/tv_neighbr_already_member"
                            android:layout_gravity=""
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/_10ssp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/text_color"
                            android:layout_height="wrap_content"
                            android:text="Sector 104"/>
                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:visibility="visible"
                android:id="@+id/l3_request_send_lyt"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/img_rst_send_pic"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_gravity="center"
                        android:padding="@dimen/_1sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:src="@drawable/user_icon_p" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_send_pending_user_reques_id"
                            android:layout_gravity=""
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/_12ssp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textColor="@color/yellow"
                            android:layout_height="wrap_content"
                            android:text="Cliff John"/>
                        <TextView
                            android:id="@+id/tv_neighbrh_send_request"
                            android:layout_gravity=""
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/_10ssp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/text_color"
                            android:layout_height="wrap_content"
                            android:text="Sector 104" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:id="@+id/lnr_approve_decline_layout"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp">
                    <FrameLayout
                        android:layout_marginRight="@dimen/_3sdp"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:id="@+id/frm_approve_id"
                        android:background="@drawable/group_owner_background"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Accept"
                            android:layout_marginRight="@dimen/_6sdp"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:id="@+id/frm_decline_id"
                        android:background="@drawable/decline_background"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Decline"
                            android:layout_marginRight="@dimen/_6sdp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:layout_gravity="center"

                            android:layout_height="wrap_content"/>
                    </FrameLayout>
                </LinearLayout>


            </FrameLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>