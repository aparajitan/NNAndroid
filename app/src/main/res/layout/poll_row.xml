<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_5sdp"
    android:paddingBottom="@dimen/_5sdp"
    android:paddingRight="@dimen/_5sdp"
    android:paddingLeft="@dimen/_5sdp"

    android:layout_marginTop="@dimen/_5sdp"
    android:background="@drawable/round_corner_dialog"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/profile_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_imageview"
            android:layout_width="@dimen/_34sdp"
            android:layout_height="@dimen/_34sdp"
            android:paddingLeft="@dimen/_5sdp"
            app:civ_border_color="@color/text_color" />

        <!--        <ImageView-->
        <!--            android:id="@+id/profile_imageview"-->
        <!--            android:layout_width="@dimen/_35sdp"-->
        <!--            android:layout_height="@dimen/_35sdp"-->
        <!--            android:layout_alignParentStart="true"-->

        <!--            android:layout_centerVertical="true"-->

        <!--            android:paddingLeft="@dimen/_5sdp"-->

        <!--            android:src="@drawable/a1" />-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/profile_imageview"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:text="Kabir zaman"
                android:textColor="@color/wall_title"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/created_date_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_tv"

                android:fontFamily="@font/montserrat_regular"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:text="Noida 104 , 2d"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/threedot_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            app:tint="@color/text_color"
            android:src="@drawable/ic_baseline_more_vert_24" />

    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp"

        >

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/poll"
            android:paddingLeft="@dimen/_5sdp"
            />



<!--        <TextView-->
<!--            android:id="@+id/question_tv"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Cricket Match Win"-->
<!--            android:paddingLeft="@dimen/_5sdp"-->
<!--            android:fontFamily="@font/montserrat_medium"-->
<!--            android:paddingTop="@dimen/_2sdp"-->
<!--            android:paddingBottom="@dimen/_2sdp"-->
<!--            android:layout_gravity="center_vertical"-->
<!--            android:textSize="@dimen/_12ssp"-->
<!--            android:textColor="@color/text_color"-->
<!--            />-->
        <TextView
            android:id="@+id/question_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Question"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12ssp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start poll: "
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:fontFamily="@font/montserrat_medium"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/text_color"
            />
        <TextView
            android:id="@+id/start_date_value_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/montserrat_regular"

            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:layout_gravity="center_vertical"

            android:textSize="@dimen/_11ssp"
            android:textColor="@color/text_color"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/state_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End poll: "
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:fontFamily="@font/montserrat_medium"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/text_color" />
        <TextView
            android:id="@+id/end_date_value_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/montserrat_regular"

            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/text_color"
            />


    </LinearLayout>
    </LinearLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:paddingRight="@dimen/_5sdp"
        android:visibility="visible"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/vote_imageview"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentStart="true"

            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"

            android:src="@drawable/poll"
            />

        <TextView
            android:id="@+id/vote_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/vote_imageview"
            android:fontFamily="@font/montserrat_regular"
            android:paddingRight="@dimen/_5sdp"
            android:text="0 Vote"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/voted_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"

            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/non_voter_background_poll"
            android:text="Vote"
            android:drawablePadding="@dimen/_5sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/voted1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/voted_background_poll"
            android:fontFamily="@font/montserrat_regular"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="Voted"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:visibility="gone"
            />

    </RelativeLayout>

</LinearLayout>