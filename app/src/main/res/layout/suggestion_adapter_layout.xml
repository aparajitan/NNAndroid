<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/lnr_root_suggestion"
    android:layout_height="wrap_content">
    <FrameLayout
        android:background="@drawable/round_corner_dialog"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/screens_padding_left_right"
        android:layout_marginLeft="@dimen/screens_padding_left_right"
        android:layout_marginTop="@dimen/_7sdp"
        android:paddingBottom="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_2sdp"
        android:id="@+id/lnr_cafe_bakery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
            android:id="@+id/lnr_holi_hai_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:background="@drawable/plumbar_suggestion"
                    android:src="@drawable/plumber_icon"
                    android:layout_height="@dimen/_25sdp"/>

                <TextView
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_13ssp"
                    android:id="@+id/tv_business"

                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/yellow"
                    android:layout_gravity="center_vertical"
                    android:text="Raju Rastogi"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Address"
                    android:id="@+id/tv_address"
                    android:visibility="gone"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/text_color"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/card_view_background_suggestion"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="@dimen/_57sdp"
            android:layout_height="@dimen/_45sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:background="@drawable/card_view_suggestion_second"
                android:layout_height="@dimen/_20sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="4"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_12sdp"
                    android:src="@drawable/ic_baseline_star_rate_first24"
                    android:layout_height="@dimen/_12sdp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:text="15"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/text_color"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Reviews"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_gravity="center"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="#878686"
                android:layout_height="wrap_content"/>
        </FrameLayout>
    </FrameLayout>

</LinearLayout>