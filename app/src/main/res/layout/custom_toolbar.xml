<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/them_color"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@color/them_color"
        android:paddingLeft="@dimen/_15sdp">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/demo_left_p" />
        <FrameLayout
            android:id="@+id/logo"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_width="@dimen/_103sdp"
            android:backgroundTint="@color/white"
            android:layout_height="@dimen/_18sdp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:background="@drawable/ngh_text_logo"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/back_btn"
            android:layout_toStartOf="@+id/search_ll"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/montserrat_medium"
                android:text=""
                android:paddingEnd="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"
                />
            <TextView
                android:id="@+id/member_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/montserrat_medium"
                android:text=""
                android:layout_marginTop="@dimen/_25sdp"
                android:visibility="gone"
                android:paddingEnd="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"
                />
        </LinearLayout>

        <!--                </LinearLayout>-->
        <LinearLayout
            android:id="@+id/search_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="@dimen/_10sdp">
            <FrameLayout
                android:visibility="gone"
                android:layout_gravity="end|center_vertical"
                android:layout_width="@dimen/_30sdp"
                android:id="@+id/deletePage"

                android:layout_marginRight="@dimen/_5sdp"
                android:layout_height="@dimen/_30sdp">
                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:src="@drawable/ic_trash_icon"

                    android:layout_gravity="center|center_vertical"
                    android:layout_height="@dimen/_16sdp" />
            </FrameLayout>
            <FrameLayout
                android:visibility="gone"
                android:layout_marginRight="@dimen/_5sdp"
                android:id="@+id/editDetails"
                android:layout_gravity="end|center_vertical"
                android:background="@drawable/circle_white_solid"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp">
                <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:padding="@dimen/_2sdp"
                    android:layout_gravity="center"
                    android:id="@+id/edit_icon_group"
                    android:src="@drawable/edit_pancil"
                    android:layout_height="@dimen/_18sdp"
                    app:tint="@color/white" />
            </FrameLayout>



            <ImageView
                android:id="@+id/search_imageview"
                android:layout_width="@dimen/_18sdp"
                app:tint="@color/white"
                android:layout_height="@dimen/_18sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/_7sdp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/search_icon_white"
                android:visibility="visible" />
            <ImageView
                android:id="@+id/add_imageview"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/circle_white_solid"
                android:padding="@dimen/_1sdp"
                android:src="@drawable/ic_plus_actionbar"
                android:visibility="visible"
                app:tint="@color/white" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/search_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/round_corner_dialog"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:visibility="gone">
            <EditText
                android:id="@+id/search_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_toStartOf="@+id/cancel_iv"
                android:hint="search..."
                android:imeOptions="actionSearch"
                android:imeActionLabel="Search"
                android:singleLine="true"
                android:textSize="@dimen/_12sdp"
                android:drawableTint="@color/black"
                android:fontFamily="@font/montserrat_regular"/>

            <ImageView
                android:id="@+id/cancel_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:src="@drawable/baseline_close_24"
                app:tint="@color/grey_font">
            </ImageView>
        </RelativeLayout>
    </RelativeLayout>
    <!--    </androidx.appcompat.widget.Toolbar>-->


</RelativeLayout>