<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_90sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:id="@+id/card_view_first"
        app:cardBackgroundColor="@color/yellow"
        android:background="@drawable/round_corner_dialog"
        android:layout_height="@dimen/_115sdp">
        <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:id="@+id/img_db"
            android:src="@drawable/background_image_one_by_two"
            android:layout_height="@dimen/image_size_event"/>
        <LinearLayout
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/_30sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="Description"
                android:textColor="@color/white"
                android:visibility="visible"
                android:id="@+id/tv_description"
                android:justificationMode="inter_word"
                android:textSize="@dimen/_11ssp"
                android:gravity="center"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:fontFamily="@font/montserrat_medium"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="bottom|center"
                android:text="Navratri Event"
                android:textColor="@color/white"
                android:id="@+id/tv_event_title"
                android:justificationMode="inter_word"
                android:textSize="@dimen/_11ssp"
                android:gravity="center"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:fontFamily="@font/montserrat_medium"
                android:layout_height="wrap_content"/>
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_gravity="center_horizontal"
             android:layout_height="wrap_content">
             <TextView
                 android:layout_width="wrap_content"
                 android:text="Start Date:-"
                 android:textColor="@color/white"
                 android:textSize="@dimen/_7ssp"
                 android:fontFamily="@font/montserrat_medium"
                 android:layout_height="wrap_content"/>
             <TextView
             android:layout_width="wrap_content"
             android:textColor="@color/white"
             android:id="@+id/tv_event_start_date"
             android:textSize="@dimen/_7ssp"
             android:fontFamily="@font/montserrat_medium"
             android:layout_height="wrap_content"/>
         </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="End Date"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_7ssp"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:id="@+id/tv_event_end_date"
                    android:textSize="@dimen/_7ssp"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>