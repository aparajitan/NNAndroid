<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:layout_height="match_parent"
    tools:context=".suggestion.MakeSuggestion">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/yellow">
            <FrameLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:id="@+id/img_back"
                        android:src="@drawable/demo_left_p"
                        android:layout_gravity="center_vertical"
                        android:layout_height="45dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:text="Make a Suggestion"
                            android:textSize="@dimen/_16ssp"
                            android:textColor="#fff"
                            android:fontFamily="@font/montserrat_medium"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            />




                    </LinearLayout>

                </LinearLayout>


            </FrameLayout>


        </androidx.appcompat.widget.Toolbar>



    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:padding="02dp"
                android:orientation="vertical"
                android:background="@color/background_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/screens_padding_left_right"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/screens_padding_left_right"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="05dp">
                    <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:id="@+id/search_id_icon"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginLeft="15dp"
                        app:tint="@color/text_color"
                        android:src="@drawable/search_icon_white" />


                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_40sdp"
                        android:backgroundTintMode="@null"
                        android:background="@null"
                        android:backgroundTint="@null"
                        android:hint="Search Business Online"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14ssp" />
                </androidx.cardview.widget.CardView>

                <FrameLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="@dimen/screens_padding_left_right"
                    android:background="@drawable/round_corner_dialog"
                    android:layout_marginRight="@dimen/screens_padding_left_right"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:id="@+id/business_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                        android:drawableTint="#9A9797"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_12sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="Select suggestion type"
                        android:layout_gravity="center_vertical"
                        android:textColor="#9A9797"
                        android:textCursorDrawable="@drawable/ic_baseline_arrow_drop_down_24"
                        android:textSize="@dimen/_14ssp" />


                </FrameLayout>
                <FrameLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="@dimen/screens_padding_left_right"

                    android:background="@drawable/round_corner_dialog"

                    android:layout_marginRight="@dimen/screens_padding_left_right"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <EditText
                        android:layout_width="wrap_content"
                        android:hint="Business name"

                        android:layout_gravity="center_vertical"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14ssp"
                        android:fontFamily="@font/montserrat_regular"
                        android:inputType="textCapWords"
                        android:backgroundTintMode="@null"
                        android:background="@null"
                        android:backgroundTint="@null"

                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"/>



                </FrameLayout>
                <FrameLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="@dimen/screens_padding_left_right"

                    android:background="@drawable/round_corner_dialog"

                    android:layout_marginRight="@dimen/screens_padding_left_right"
                    android:layout_width="match_parent"
                    android:layout_height="112dp">

                    <EditText
                        android:layout_width="wrap_content"
                        android:hint="Address"

                        android:layout_gravity="start"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14ssp"
                        android:inputType="textCapSentences"
                        android:fontFamily="@font/montserrat_regular"
                        android:backgroundTintMode="@null"
                        android:background="@null"
                        android:backgroundTint="@null"

                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"/>



                </FrameLayout>
                <FrameLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="@dimen/screens_padding_left_right"

                    android:background="@drawable/round_corner_dialog"

                    android:layout_marginRight="@dimen/screens_padding_left_right"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <EditText
                        android:layout_width="wrap_content"
                        android:hint="Phone number"
                        android:backgroundTintMode="@null"
                        android:background="@null"
                        android:backgroundTint="@null"
                        android:inputType="number"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14ssp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/montserrat_regular"

                        android:layout_height="wrap_content"/>



                </FrameLayout>
                <FrameLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="@dimen/screens_padding_left_right"

                    android:background="@drawable/round_corner_dialog"

                    android:layout_marginRight="@dimen/screens_padding_left_right"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <EditText
                        android:layout_width="wrap_content"
                        android:hint="Website"

                        android:layout_gravity="center_vertical"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14ssp"
                        android:fontFamily="@font/montserrat_regular"
                        android:backgroundTintMode="@null"
                        android:background="@null"
                        android:backgroundTint="@null"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"/>



                </FrameLayout>

                <FrameLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="@dimen/screens_padding_left_right"

                    android:background="@drawable/round_corner_dialog"

                    android:layout_marginRight="@dimen/screens_padding_left_right"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <EditText
                        android:layout_width="wrap_content"
                        android:hint="Class"

                        android:layout_gravity="center_vertical"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14ssp"
                        android:backgroundTintMode="@null"
                        android:background="@null"
                        android:backgroundTint="@null"

                        android:fontFamily="@font/montserrat_regular"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"/>



                </FrameLayout>



                <FrameLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="@dimen/screens_padding_left_right"

                    android:background="@drawable/round_corner_dialog"

                    android:layout_marginRight="@dimen/screens_padding_left_right"
                    android:layout_width="match_parent"
                    android:layout_height="112dp">

                    <EditText
                        android:layout_width="wrap_content"
                        android:hint="Comment"

                        android:layout_gravity="start"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14ssp"
                        android:fontFamily="@font/montserrat_regular"
                        android:backgroundTintMode="@null"
                        android:background="@null"
                        android:backgroundTint="@null"

                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"/>



                </FrameLayout>

                <FrameLayout
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:id="@+id/post_id"
                    android:layout_marginTop="23dp"
                    android:background="@drawable/button_back"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="POST"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_gravity="center"
                        android:textColor="@color/button_text_color"
                        android:textSize="@dimen/button_size"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"/>
                </FrameLayout>

            </LinearLayout>


        </FrameLayout>

    </ScrollView>

</LinearLayout>