<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background_color"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".forgotPassword.ForgotPasswordPhoneNo">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/yellow">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:id="@+id/img_back"
                    android:src="@drawable/demo_left_p"
                    android:layout_gravity="center_vertical"
                    android:layout_height="45dp" />
                <TextView
                    android:text="Forgot Password?"
                    android:textSize="@dimen/toolbar_text_size"
                    android:textColor="#fff"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/screens_padding_left_right"
            android:layout_marginRight="@dimen/screens_padding_left_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Please enter your registered mobile number."
                android:textColor="@color/text_color5"
                android:textSize="16sp"
                android:textStyle="bold" />

        </FrameLayout>
        <FrameLayout
            android:layout_marginTop="@dimen/background_gap_centre"
            android:layout_marginLeft="@dimen/screens_padding_left_right"
            android:visibility="visible"
            android:background="@drawable/round_corner_dialog"
            android:layout_marginRight="@dimen/screens_padding_left_right"
            android:layout_width="match_parent"
            android:layout_height="@dimen/upload_image_dimension">
            <TextView
                android:textSize="@dimen/_14sdp"
                android:layout_marginRight="15dp"
                android:textColor="@color/yellow"
                android:layout_gravity="end|center_vertical"
                android:layout_width="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="Send OTP"
                />
            <EditText
                android:layout_width="match_parent"
                android:hint="Mobile #"
                android:id="@+id/phone_no_id"
                android:layout_marginRight="@dimen/_75sdp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_short"
                android:visibility="visible"
                android:backgroundTintMode="@null"
                android:backgroundTint="@null"
                android:background="@null"
                android:inputType="number"
                android:fontFamily="@font/montserrat_regular"
                android:paddingLeft="@dimen/text_padding_left"
                android:layout_height="match_parent"/>
            <TextView
                android:textSize="@dimen/text_size_short"
                android:id="@+id/sent_otp"
                android:visibility="visible"
                android:layout_marginRight="15dp"
                android:textColor="@color/yellow"
                android:layout_gravity="end|center_vertical"
                android:layout_width="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:layout_height="wrap_content"
                android:text=" Get OTP" />
            <FrameLayout
                android:layout_gravity="end|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_OtpTimer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center_horizontal"
                    android:text="00:00"
                    android:layout_marginRight="15dp"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:textSize="14sp"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/tv_resend_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:gravity="center"
                    android:text="@string/resend_otp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/yellow"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </FrameLayout>

        </FrameLayout>
        <FrameLayout
            android:layout_marginTop="@dimen/background_gap_centre"
            android:layout_marginLeft="@dimen/screens_padding_left_right"
            android:visibility="visible"
            android:background="@drawable/round_corner_dialog"
            android:layout_marginRight="@dimen/screens_padding_left_right"
            android:layout_width="match_parent"
            android:layout_height="@dimen/upload_image_dimension">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/text_padding_left"
                android:layout_height="wrap_content">
                <EditText
                    android:inputType="number"
                    android:maxLength="1"
                    android:id="@+id/et_one"
                    android:layout_gravity="start"
                    android:backgroundTint="#9E9B9B"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:inputType="number"
                    android:layout_gravity="start"
                    android:backgroundTint="#9E9B9B"
                    android:layout_width="35dp"
                    android:maxLength="1"
                    android:id="@+id/et_two"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_three"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:backgroundTint="#9E9B9B"
                    android:inputType="number"
                    android:maxLength="1"/>
                <EditText
                    android:inputType="number"
                    android:layout_gravity="start"
                    android:backgroundTint="#9E9B9B"
                    android:maxLength="1"
                    android:id="@+id/et_four"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:inputType="number"
                    android:layout_gravity="start"
                    android:backgroundTint="#9E9B9B"
                    android:maxLength="1"
                    android:id="@+id/et_five"
                    android:visibility="visible"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:inputType="number"
                    android:layout_gravity="start"
                    android:backgroundTint="#9E9B9B"
                    android:maxLength="1"
                    android:id="@+id/et_six"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etOtpDemo"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


            </LinearLayout>
        </FrameLayout>




        <FrameLayout
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_10sdp"
            android:id="@+id/forgot_password_id_send"
            android:layout_marginTop="23dp"
            android:background="@drawable/upload_button_background"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height">
            <TextView
                android:id="@+id/btn_update_password"
                android:layout_width="wrap_content"
                android:text="Verify OTP"
                android:layout_gravity="center"
                android:textColor="@color/button_text_color"
                android:textSize="@dimen/button_size"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="wrap_content"/>
        </FrameLayout>


    </LinearLayout>



</LinearLayout>