<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_20sdp"
    android:layout_marginLeft="@dimen/_20sdp"
    android:layout_height="match_parent">
    <FrameLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/round_corner_dialog"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:background="@drawable/round_corner_dialog"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/_12sdp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_medium"

                        android:text="Please confirm that the address"
                        android:textColor="@color/dialog_heading_top"
                        android:textSize="@dimen/dialog_text_size" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="proof is for your address in"
                        android:textColor="@color/dialog_heading_top"
                        android:textSize="@dimen/dialog_text_size" />

                    <TextView
                        android:id="@+id/nghName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Area"
                        android:textColor="@color/dialog_heading_top"
                        android:textSize="@dimen/dialog_text_size" />

                </LinearLayout>




            </FrameLayout>



            <TextView
                android:background="@color/line_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:text="Cancel"
                    android:id="@+id/tvCancel"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:textColor="#F44336"

                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/_14ssp"
                    android:layout_height="wrap_content"/>
                <FrameLayout
                    android:background="@color/line_color"
                    android:layout_gravity="center|top"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_40sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:text="Confirm"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/post_frm"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/green_color"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_14ssp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</FrameLayout>