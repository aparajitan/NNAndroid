<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_centerVertical="true"
        android:background="@color/them_color"
        android:paddingLeft="@dimen/_10sdp">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/demo_left_p" />

        <LinearLayout
            android:id="@+id/profile_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/back_btn"

            android:orientation="horizontal">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_imageview"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"

                android:layout_centerVertical="true"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/group_default_image"
                />



            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:fontFamily="@font/montserrat_medium"
                android:text="Title"
                android:paddingLeft="@dimen/_5sdp"
                android:textColor="#ffffff"
                android:textSize="@dimen/_15ssp"
                />
            <TextView
                android:id="@+id/member_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="4 Members"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone" />
        </LinearLayout>
        <!--                </LinearLayout>-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:id="@+id/lnrGone"
            android:orientation="horizontal"
            android:paddingRight="@dimen/_10sdp">
            <ImageView
                android:id="@+id/search_imageview"
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/_5sdp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/search_icon_white"
                android:visibility="visible" />
            <ImageView
                android:id="@+id/add_imageview"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/circle_white_solid"
                android:padding="@dimen/_1sdp"
                android:src="@drawable/ic_plus_actionbar"
                android:visibility="visible"
                app:tint="@color/white" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/search_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/round_corner_dialog"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:visibility="gone">
            <EditText
                android:id="@+id/search_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_toStartOf="@+id/cancel_iv"
                android:hint="search..."
                android:focusable="true"
                android:imeOptions="actionSearch"
                android:imeActionLabel="Done"
                android:singleLine="true"
                android:textSize="@dimen/_12sdp"
                android:drawableTint="@color/black"

                android:fontFamily="@font/montserrat_regular"/>

            <ImageView
                android:id="@+id/cancel_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:src="@drawable/baseline_close_24"
                app:tint="@color/grey_font">

            </ImageView>

        </RelativeLayout>
    </RelativeLayout>


    <!--    </androidx.appcompat.widget.Toolbar>-->


</RelativeLayout>