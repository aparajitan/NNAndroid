<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context=".businessModule.BusinessDetailActivity">

    <include
        android:id="@+id/header"
        layout="@layout/custom_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/round_corner_dialog"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_5sdp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_7sdp"
                        app:cardElevation="@dimen/_5sdp"
                        app:cardUseCompatPadding="false">

                        <LinearLayout
                            android:id="@+id/review_ll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/rating_rl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/them_color"
                                android:gravity="center_horizontal"
                                android:paddingTop="@dimen/_2sdp"
                                android:paddingBottom="@dimen/_2sdp">

                                <TextView
                                    android:id="@+id/rating_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:layout_centerVertical="true"
                                    android:drawableTint="@color/white"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:gravity="center"

                                    android:text="3.0"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10ssp" />

                                <ImageView
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_10sdp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/_1sdp"
                                    android:layout_marginTop="@dimen/_5sdp"

                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:layout_toEndOf="@+id/rating_tv"
                                    android:src="@drawable/star_rating"
                                    app:tint="@color/white" />
                            </RelativeLayout>


                            <LinearLayout
                                android:id="@+id/display_review_ll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/review_quantity_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:layout_gravity="center_horizontal"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:gravity="center"

                                    android:text="200"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/_8ssp" />

                                <TextView
                                    android:id="@+id/business_review"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:gravity="center"
                                    android:paddingLeft="@dimen/_5sdp"
                                    android:paddingRight="@dimen/_5sdp"
                                    android:paddingBottom="@dimen/_2sdp"
                                    android:text="Reviews"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/_8ssp" />
                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/cardView"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round_corner_dialog"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/business_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_semibold"
                                android:includeFontPadding="false"
                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_5sdp"
                                android:text="Comany Name"
                                android:textColor="@color/them_color"
                                android:textSize="@dimen/_15ssp"
                                android:visibility="visible" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round_corner_dialog"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/business_category"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_semibold"
                                android:includeFontPadding="false"
                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_5sdp"
                                android:text="Health &amp; Fitness"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/_12ssp" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"

                            android:orientation="horizontal"
                            android:paddingRight="@dimen/_5sdp">


                            <TextView
                                android:id="@+id/business_tagline"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_medium"
                                android:includeFontPadding="true"
                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_5sdp"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="italic" />


                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/for_you_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:id="@+id/detail_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <com.app_neighbrsnook.libraries.readmoretextview.ReadMoreTextView
                        android:id="@+id/business_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="Let's  bharat mahan desh hai uski sanvidhan ke arntargat m palan karung celebrate holi in our community hall and then we can biryani for lunch"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12ssp"
                        app:colorClickableText="@color/them_color"
                        app:trimCollapsedText="@string/less"
                        app:trimExpandedText="@string/show"
                        app:trimLength="150" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/doc_imageview"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:visibility="gone"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="@dimen/_10sdp"
                            android:src="@drawable/show_icon_prsnl"
                            app:tint="@color/text_color" />


                        <!--            <TextView-->
                        <!--                android:id="@+id/doc_type"-->
                        <!--                android:layout_width="wrap_content"-->
                        <!--                android:layout_height="wrap_content"-->
                        <!--                android:fontFamily="@font/montserrat_medium"-->
                        <!--                android:paddingLeft="@dimen/_5sdp"-->
                        <!--                android:layout_toEndOf="@+id/doc_imageview"-->
                        <!--                android:gravity="center_vertical"-->
                        <!--                android:layout_gravity="center_vertical"-->
                        <!--                android:includeFontPadding="false"-->

                        <!--                android:paddingTop="@dimen/_5sdp"-->
                        <!--                android:text="Doc type"-->
                        <!--                android:textColor="@color/text_color"-->
                        <!--                android:textSize="@dimen/_12ssp" />-->


                        <TextView
                            android:id="@+id/view_doc_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/doc_imageview"
                            android:fontFamily="@font/montserrat_regular"
                            android:includeFontPadding="true"
                            android:paddingLeft="@dimen/_10sdp"
                            android:text="Doc type"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/doc_count_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/montserrat_regular"
                            android:includeFontPadding="true"
                            android:paddingRight="@dimen/_5sdp"
                            android:text="View"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/_12ssp"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <com.github.barteksc.pdfviewer.PDFView
                        android:id="@+id/pdfView"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:visibility="gone" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".8dp"
                        android:background="@color/text_color" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/time"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="@dimen/_10sdp"
                            android:src="@drawable/ic_outline_access_time_24"
                            app:tint="@color/text_color" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/time"
                            android:orientation="vertical"

                            android:paddingTop="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp">

                            <TextView
                                android:id="@+id/open_close_time_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_regular"
                                android:paddingLeft="@dimen/_10sdp"


                                android:text="Open :  09:00 AM to 10:00 PM "
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/_12ssp" />


                            <TextView
                                android:id="@+id/weekly_off_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_regular"

                                android:paddingLeft="@dimen/_10sdp"
                                android:text="Weekly off :  Saturday, Sunday"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/_12ssp" />

                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/address_iv"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_centerVertical="true"
                            android:layout_weight=".5"
                            android:paddingLeft="@dimen/_10sdp"
                            android:src="@drawable/location_green"
                            app:tint="@color/text_color" />

                        <TextView
                            android:id="@+id/address_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/address_iv"
                            android:fontFamily="@font/montserrat_regular"
                            android:paddingLeft="@dimen/_10sdp"
                            android:text=""
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/_12ssp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/web_relativelayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/web"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="@dimen/_10sdp"
                            android:src="@drawable/about_us"
                            app:tint="@color/text_color" />

                        <TextView
                            android:id="@+id/web_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/web"
                            android:fontFamily="@font/montserrat_regular"
                            android:paddingLeft="@dimen/_10sdp"

                            android:textColor="@color/them_color"
                            android:textSize="@dimen/_12ssp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/email_relativelayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/email"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="@dimen/_10sdp"
                            android:src="@drawable/ic_outline_email_24"
                            app:tint="@color/text_color" />

                        <TextView
                            android:id="@+id/email_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/email"
                            android:fontFamily="@font/montserrat_regular"
                            android:paddingLeft="@dimen/_10sdp"

                            android:textColor="@color/text_color"
                            android:textSize="@dimen/_12ssp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/mobile_relativelayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/phone"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight=".5"
                            android:paddingLeft="@dimen/_10sdp"
                            android:src="@drawable/contact_us"
                            app:tint="@color/text_color" />

                        <TextView
                            android:id="@+id/phone_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/phone"
                            android:fontFamily="@font/montserrat_regular"
                            android:paddingLeft="@dimen/_10sdp"

                            android:textColor="@color/text_color"
                            android:textSize="@dimen/_12ssp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/profile_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/owner_imageview"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_centerVertical="true"
                            android:paddingLeft="@dimen/_5sdp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/owner_imageview"
                            android:orientation="vertical"

                            android:paddingTop="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp">

                            <TextView
                                android:id="@+id/owner_name_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_regular"
                                android:paddingLeft="@dimen/_10sdp"
                                android:text=""
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/_12ssp" />


                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_regular"

                                android:paddingLeft="@dimen/_10sdp"
                                android:text="Business owner"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/_8ssp" />

                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".8dp"
                        android:background="@color/text_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/rate_now_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_outline_star_rate_24"
                            android:drawablePadding="@dimen/_5sdp"
                            android:fontFamily="@font/montserrat_regular"
                            android:gravity="center_vertical"
                            android:padding="@dimen/_5sdp"
                            android:text="Rate Now"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/_10ssp" />

                        <TextView
                            android:id="@+id/write_review_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/review_image"

                            android:drawablePadding="@dimen/_5sdp"
                            android:fontFamily="@font/montserrat_regular"
                            android:gravity="center_vertical"
                            android:padding="@dimen/_5sdp"
                            android:text="Write a review"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/_10ssp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/reviews_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/round_corner_dialog"
                android:focusable="true"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/review_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/_5sdp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/review_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/round_corner_white"
                android:visibility="gone">

                <EditText
                    android:id="@+id/write_review_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/send_imageview"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/montserrat_regular"
                    android:inputType="textCapSentences"
                    android:hint="Write your review"
                    android:maxLines="3"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_color"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:id="@+id/send_imageview"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_baseline_send_24"
                    app:tint="@color/text_color" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>



