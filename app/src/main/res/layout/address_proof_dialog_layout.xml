<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="@dimen/_8sdp"
android:orientation="vertical">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:background="@drawable/round_corner_dialog"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="@dimen/_302sdp"
            android:layout_height="400sp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_uploaded_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="fitXY" />
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_19sdp"
                android:layout_gravity="center_horizontal|bottom|right"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_20sdp">


                <ImageView
                    android:layout_margin="@dimen/_5sdp"
                    android:id="@+id/iv_remove_image"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:padding="@dimen/_7sdp"
                    app:tint="@color/black"
                    android:src="@drawable/ic_trash_icon"
                    android:visibility="visible"/>

            </androidx.cardview.widget.CardView>

        </FrameLayout>

    </LinearLayout>


</FrameLayout>

<androidx.cardview.widget.CardView
    android:layout_width="@dimen/_20sdp"
    android:layout_height="@dimen/_20sdp"
    android:layout_gravity="end|top"
    android:layout_marginRight="@dimen/_20sdp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_15sdp"
    app:cardElevation="@dimen/_5sdp">
    <ImageView
        android:id="@+id/cross_imageview"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:layout_gravity="center"
        android:src="@drawable/close_icon_p"
        app:tint="@color/text_color" />


</androidx.cardview.widget.CardView>

</FrameLayout>