<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="@dimen/_5sdp"
    android:background="@drawable/round_corner_dialog"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/profile_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_imageview"
                    android:layout_width="@dimen/_34sdp"
                    android:layout_height="@dimen/_34sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    app:civ_border_color="@color/them_color" />

                <!--        <ImageView-->
                <!--            android:id="@+id/profile_imageview"-->
                <!--            android:layout_width="@dimen/_35sdp"-->
                <!--            android:layout_height="@dimen/_35sdp"-->
                <!--            android:layout_alignParentStart="true"-->

                <!--            android:layout_centerVertical="true"-->

                <!--            android:paddingLeft="@dimen/_5sdp"-->

                <!--            android:src="@drawable/a1" />-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/profile_imageview"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/user_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="Amaya singh"
                        android:textColor="@color/them_color"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/created_date_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_tv"

                        android:fontFamily="@font/montserrat_regular"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="Noida 104 , 2d"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/threedot_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/_5sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:src="@drawable/ic_baseline_more_vert_24"
                app:tint="@color/text_color" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:visibility="visible">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:src="@drawable/group" />


                <!--            <TextView-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:text="Group :"-->
                <!--                android:paddingTop="@dimen/_2sdp"-->
                <!--                android:paddingBottom="@dimen/_2sdp"-->
                <!--                android:paddingLeft="@dimen/_8sdp"-->
                <!--                android:textColor="@color/text_color"-->
                <!--                android:fontFamily="@font/montserrat_medium"-->
                <!--                android:textSize="@dimen/_12ssp">-->

                <!--            </TextView>-->


                <TextView
                    android:id="@+id/group_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/montserrat_regular"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="Cricket Match Win (Pvt)"

                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_12ssp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--            <ImageView-->
                <!--                android:layout_width="@dimen/_20sdp"-->
                <!--                android:layout_height="@dimen/_20sdp"-->
                <!--                android:src="@drawable/group"-->
                <!--                android:paddingLeft="@dimen/_5sdp"-->
                <!--                />-->


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="Type :"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_11ssp"
                    android:visibility="gone">

                </TextView>


                <TextView
                    android:id="@+id/group_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/montserrat_medium"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:text="Cricket Match Win (Pvt)"

                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_11ssp" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="1dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imgHomeGroup"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:scaleType="fitXY"
            android:src="@drawable/group_img_app" />

    </androidx.cardview.widget.CardView>

    <com.app_neighbrsnook.libraries.readmoretextview.ReadMoreTextView
        android:id="@+id/group_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingRight="@dimen/_8sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:text="Let's  bharat mahan desh hai uski sanvidhan ke arntargat m palan karung celebrate holi in our community hall and then we can biryani for lunch"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_12ssp"
        android:visibility="gone"
        app:colorClickableText="@color/them_color"
        app:trimCollapsedText="@string/less"
        app:trimExpandedText="@string/show"
        app:trimLength="150" />

</LinearLayout>