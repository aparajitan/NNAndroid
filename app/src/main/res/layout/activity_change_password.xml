<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context=".setting.ChangePasswordActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/yellow">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/img_back"
                        android:layout_width="40dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/demo_left_p" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Change Password"
                        android:textColor="#fff"
                        android:textSize="@dimen/toolbar_text_size" />

                </LinearLayout>


            </FrameLayout>


        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/upload_image_dimension"
        android:layout_marginLeft="@dimen/screens_padding_left_right"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/screens_padding_left_right"
        android:background="@drawable/round_corner_dialog">

        <!--        <ImageView-->
        <!--            android:id="@+id/iv_old_pass"-->
        <!--            android:layout_width="@dimen/_20sdp"-->
        <!--            android:layout_height="@dimen/_20sdp"-->
        <!--            android:layout_gravity="end|center_vertical"-->
        <!--            android:layout_marginRight="15dp"-->
        <!--            android:src="@drawable/hide_password" />-->

        <EditText
            android:id="@+id/old_password_edt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/montserrat_regular"
            android:hint="Old password"
            android:maxLength="100"
            android:maxLines="1"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color"
            android:textSize="@dimen/_12sdp" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/upload_image_dimension"
        android:layout_marginLeft="@dimen/screens_padding_left_right"
        android:layout_marginTop="@dimen/background_gap_centre"
        android:layout_marginRight="@dimen/screens_padding_left_right"
        android:background="@drawable/round_corner_dialog">

        <!-- EditText ko sabse pehle rakho -->
        <EditText
            android:id="@+id/new_password_edt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autofillHints=""
            android:backgroundTint="@color/white"
            android:fontFamily="@font/montserrat_regular"
            android:hint="New password"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:maxLength="100"
            android:maxLines="1"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_70sdp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color"
            android:textSize="@dimen/_12sdp" />

        <!-- Strength text -->
        <TextView
            android:id="@+id/tvStrength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="@dimen/_35sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="13sp" />

        <!-- Eye icons -->
        <ImageView
            android:id="@+id/iv_new_pass_show"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/show_password_prsnl"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_new_pass_hide"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/hide_password" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/upload_image_dimension"
        android:layout_marginLeft="@dimen/screens_padding_left_right"
        android:layout_marginTop="@dimen/background_gap_centre"
        android:layout_marginRight="@dimen/screens_padding_left_right"
        android:background="@drawable/round_corner_dialog">

        <EditText
            android:id="@+id/confirm_password_edt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autofillHints=""
            android:backgroundTint="@color/white"
            android:fontFamily="@font/montserrat_regular"
            android:hint="Confirm password"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:maxLength="100"
            android:maxLines="1"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_70sdp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color"
            android:textSize="@dimen/_12sdp" />

        <ImageView
            android:id="@+id/iv_old_confirm_pass_show"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/show_password_prsnl"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_old_confirm_pass_hide"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/hide_password" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/post_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="23dp"
        android:layout_marginRight="52dp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/button_back"
        android:gravity="center">

        <TextView
            android:id="@+id/btn_update_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="21sp" />
    </FrameLayout>

</LinearLayout>