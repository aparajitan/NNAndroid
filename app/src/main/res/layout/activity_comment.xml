<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context=".CommentActivity">

    <include
        android:id="@+id/header"
        layout="@layout/custom_toolbar" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/chat_rl"
        android:layout_below="@+id/header"
        android:layout_marginBottom="@dimen/_30sdp"
        tools:ignore="NotSibling">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/root"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_5sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp">

                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/profile_imageview"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:src="@drawable/profile_g1"
                            app:civ_border_color="@color/text_color" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/profile_imageview"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/user_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_semibold"
                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:text="Sudhanshu"
                                android:textColor="@color/them_color"
                                android:textSize="@dimen/_12ssp" />

                            <TextView
                                android:id="@+id/created_date_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/user_tv"
                                android:fontFamily="@font/montserrat_regular"
                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:text="Noida 104 , 2d"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/_10ssp" />

                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/post_type_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/montserrat_medium"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingTop="@dimen/_2sdp"
                            android:paddingBottom="@dimen/_2sdp"
                            android:text="Post type : General"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/_12ssp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/post_msg_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ellipsize="end"
                            android:fontFamily="@font/montserrat_regular"
                            android:maxLines="2"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingTop="@dimen/_2sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="Post : This is testing post asldjlafja ajdfalf asfd fdjlaf adfl afhakf  kahfa fakf khk f hfjaf k  fakfhkaf khfka fhf fak f fhakfkfhhfkaf  "
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/_12ssp" />

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/rl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/_1sdp"
                            android:paddingRight="@dimen/_1sdp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/wall_image_rv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/reactions_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:visibility="gone"
                            app:cardBackgroundColor="@color/background_color"
                            app:cardCornerRadius="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/background_color"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/reaction_like"
                                    android:layout_width="@dimen/_32sdp"
                                    android:layout_height="@dimen/_32sdp"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:src="@drawable/ic_emoji_like" />

                                <ImageView
                                    android:id="@+id/reaction_love"
                                    android:layout_width="@dimen/_32sdp"
                                    android:layout_height="@dimen/_32sdp"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:src="@drawable/ic_emiji_love" />

                                <ImageView
                                    android:id="@+id/reaction_haha"
                                    android:layout_width="@dimen/_32sdp"
                                    android:layout_height="@dimen/_32sdp"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:src="@drawable/ic_emiji_haha" />

                                <ImageView
                                    android:id="@+id/reaction_wow"
                                    android:layout_width="@dimen/_32sdp"
                                    android:layout_height="@dimen/_32sdp"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:src="@drawable/ic_emiji_wow" />

                                <ImageView
                                    android:id="@+id/reaction_sad"
                                    android:layout_width="@dimen/_32sdp"
                                    android:layout_height="@dimen/_32sdp"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:src="@drawable/ic_emiji_party" />

                                <ImageView
                                    android:id="@+id/reaction_angry"
                                    android:layout_width="@dimen/_32sdp"
                                    android:layout_height="@dimen/_32sdp"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:src="@drawable/ic_emiji_smart" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".8dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/divider_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:weightSum="4">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout
                                android:id="@+id/emoji_ll"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/ll_react_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:gravity="center">

                                    <ImageView
                                        android:id="@+id/reactButton"
                                        android:layout_width="@dimen/_17sdp"
                                        android:layout_height="@dimen/_17sdp"
                                        android:src="@drawable/baseline_favorite_border_24"
                                        android:visibility="visible" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_react_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/reaction_count"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginRight="20dp"
                                        android:layout_marginBottom="5dp"
                                        android:fontFamily="@font/montserrat_semibold"
                                        android:text="5"
                                        android:textColor="@color/text_color"
                                        android:textSize="@dimen/_10sdp" />

                                </LinearLayout>

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/emoji_rv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:visibility="gone" />

                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/comment_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/_17sdp"
                                    android:layout_height="@dimen/_17sdp"
                                    android:src="@drawable/baseline_comments_icon"
                                    app:tint="@color/text_color" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/comment_textview"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="5dp"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="5"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_favorite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/iv_favorite"
                                android:layout_width="@dimen/_17sdp"
                                android:layout_height="@dimen/_17sdp"
                                android:src="@drawable/svg_bookmark_outline"
                                android:layout_margin="5dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/share_imageview"
                                android:layout_width="@dimen/_17sdp"
                                android:layout_height="@dimen/_17sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="5dp"
                                android:src="@drawable/share"
                                app:tint="@color/text_color" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".8dp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@color/divider_color" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center|left">

                        <!-- Comments Section Heading -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comments"
                            android:textSize="@dimen/_12ssp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textColor="@color/text_color"
                            android:layout_gravity="left"
                            android:layout_marginLeft="@dimen/_20sdp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center|right">

                        <!-- Comments Section Heading -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Most relevant"
                            android:visibility="gone"
                            android:drawableRight="@drawable/baseline_splitscreen_24"
                            android:textSize="@dimen/_11ssp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textColor="@color/secondary_text_color"
                            android:layout_gravity="right"
                            android:layout_marginRight="@dimen/_20sdp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rv_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:visibility="gone">

                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/comment_rv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:nestedScrollingEnabled="false" />

                    </androidx.core.widget.NestedScrollView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/ll_reply_comment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/white_stroke_baground"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".75">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/at_sign"
                    android:gravity="right"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/purple_700"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_2sdp"/>

                <TextView
                    android:id="@+id/txtv_reply_comment_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Shubham Singh"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/purple_700"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:gravity="right">

                <ImageView
                    android:id="@+id/cross_imageview"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/cross_icon_post_blue"
                    app:tint="#757C82"/>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/chat_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:background="@drawable/white_stroke_baground">

<!--            <EditText-->
<!--                android:id="@+id/msg_et"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="48dp"-->
<!--                android:layout_centerVertical="true"-->
<!--                android:layout_toStartOf="@+id/send_imageview"-->
<!--                android:hint="Type a message"-->
<!--                android:inputType="textCapSentences|textMultiLine"-->
<!--                android:paddingTop="10dp"-->
<!--                android:paddingBottom="10dp"-->
<!--                android:scrollbars="vertical"-->
<!--                android:textColor="@color/text_color"-->
<!--                android:textSize="@dimen/_12ssp" />-->

  <!--          <EditText
                android:id="@+id/msg_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center_vertical"
                android:hint="Type a message"
                android:inputType="textCapSentences|textMultiLine"
                android:layout_toStartOf="@+id/send_imageview"
                android:background="@null"
                android:backgroundTint="@null"
                android:backgroundTintMode="@null"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/text_color"
                android:textColorHint="@color/black"
                android:textSize="@dimen/text_size_short"
                android:visibility="visible" />-->


            <EditText
                android:id="@+id/msg_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:hint="Type a message"
                android:inputType="textCapSentences|textMultiLine"
                android:background="@null"
                android:backgroundTint="@null"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/text_color"
                android:textColorHint="@color/black"
                android:textSize="@dimen/text_size_short"
                android:visibility="visible"
                android:minLines="1"
                android:maxLines="5"
                android:minHeight="@dimen/_36sdp"
                android:scrollbars="vertical"
                android:gravity="center|start"
                android:paddingRight="@dimen/_20sdp"
                android:overScrollMode="ifContentScrolls" />

            <ImageView
                android:id="@+id/send_imageview"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                app:srcCompat="@drawable/send_message_icon"
                app:tint="#757C82" />

            <ImageView
                android:id="@+id/send_reply_imageview"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                app:srcCompat="@drawable/send_message_icon"
                app:tint="#757C82"
                android:visibility="gone"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>