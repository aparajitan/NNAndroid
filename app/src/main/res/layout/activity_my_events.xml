<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context=".event.EventAllListCurrentData">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/them_color">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/img_back"
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="@dimen/_27sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/demo_left_p" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Events"
                        android:textColor="#fff"
                        android:textSize="@dimen/toolbar_text_size" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/create_event_id"

                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="@dimen/plus_icon_size"
                        android:layout_height="@dimen/plus_icon_size"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_white_solid"
                        android:padding="@dimen/_1sdp"
                        android:src="@drawable/ic_plus_actionbar"
                        android:tint="@color/white"
                        tools:ignore="UseAppTint" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/img_event_search"
                    android:layout_width="@dimen/search_img_size"
                    android:layout_height="@dimen/search_img_size"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="@dimen/_33sdp"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/search_icon_white" />

                <RelativeLayout
                    android:id="@+id/search_rl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/round_corner_dialog"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/search_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toStartOf="@+id/cancel_iv"
                        android:backgroundTint="@color/white"
                        android:drawableTint="@color/black"
                        android:focusable="true"
                        android:fontFamily="@font/montserrat_regular"
                        android:hint="search..."
                        android:imeActionLabel="Search"
                        android:imeOptions="actionSearch"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:singleLine="true"

                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:id="@+id/cancel_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:src="@drawable/baseline_close_24"
                        app:tint="@color/grey_font">

                    </ImageView>

                </RelativeLayout>
            </FrameLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

