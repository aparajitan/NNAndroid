<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    tools:context=".nearBy.NearByBusinessActivity">

    <include
        android:id="@+id/header"
        layout="@layout/custom_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp"
        android:background="@drawable/round_corner_dialog">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/round_corner_dialog"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/business_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/montserrat_semibold"
                android:includeFontPadding="false"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="Toni &amp; guy"
                android:textColor="@color/them_color"
                android:textSize="@dimen/_15ssp" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_below="@+id/business_name"
                android:paddingRight="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/business_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:paddingLeft="@dimen/_5sdp"

                    android:paddingBottom="@dimen/_5sdp"
                    android:text="Health &amp; Fitness"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10ssp" />



                <TextView
                    android:id="@+id/business_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:paddingLeft="@dimen/_5sdp"
                    android:layout_below="@+id/business_category"

                    android:paddingBottom="@dimen/_5sdp"
                    android:text="Khan market, delhi"
                    android:textColor="#604E4E"
                    android:textSize="@dimen/_11ssp" />



            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_7sdp"
                app:cardElevation="@dimen/_5sdp"
                android:layout_alignParentEnd="true"

                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:id="@+id/review_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/them_color"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/rating_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerVertical="true"
                            android:drawableTint="@color/white"
                            android:fontFamily="@font/montserrat_semibold"
                            android:gravity="center"

                            android:text="3.0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_1sdp"
                            android:layout_marginTop="@dimen/_5sdp"

                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_toEndOf="@+id/rating_tv"
                            android:src="@drawable/star_rating"
                            app:tint="@color/white" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/review_quantity_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"

                        android:text="200"
                        android:textColor="@color/purple_500"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:id="@+id/business_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:text="Reviews"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_8ssp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <com.google.android.material.card.MaterialCardView
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_height="wrap_content">

            <com.app_neighbrsnook.libraries.slider.SliderView
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="right"
                app:sliderAutoCycleEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="@dimen/_15sdp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="@dimen/_2sdp"
                app:sliderIndicatorRadius="@dimen/_1sdp"
                app:sliderIndicatorSelectedColor="#5A5A5A"
                app:sliderIndicatorUnselectedColor="#FFF"
                app:sliderScrollTimeInSec="3"
                app:sliderStartAutoCycle="true" />

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:id="@+id/detail_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.app_neighbrsnook.libraries.readmoretextview.ReadMoreTextView
                android:id="@+id/business_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                app:trimLength="150"
                android:visibility="gone"
                app:colorClickableText="@color/them_color"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_12ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                android:id="@+id/doc_imageview"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/_10sdp"
                android:src="@drawable/show_icon_prsnl"
                app:tint="@color/text_color" />

            <TextView
                android:id="@+id/doc_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:layout_gravity="center_vertical"
                android:gravity="center"

                android:fontFamily="@font/montserrat_regular"
                android:includeFontPadding="true"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/them_color"
                android:paddingLeft="@dimen/_10sdp"/>

            </LinearLayout>

            <com.github.barteksc.pdfviewer.PDFView
                android:id="@+id/pdfView"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"

                />

            <!--            <androidx.recyclerview.widget.RecyclerView-->
            <!--                android:id="@+id/rv_doc"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:padding="@dimen/_5sdp" />-->




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/time"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/_10sdp"
                    android:src="@drawable/ic_outline_access_time_24"
                    app:tint="@color/text_color" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/time"
                    android:orientation="vertical"

                    >

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:paddingLeft="@dimen/_10sdp"


                        android:text="Open :  09:00 AM to 10:00 PM "
                        android:textColor="#604E4E"
                        android:textSize="@dimen/_10ssp" />


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"

                        android:paddingLeft="@dimen/_10sdp"
                        android:text="Weekly off :  Saturday, Sunday"
                        android:textColor="#604E4E"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/address_tv"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerVertical="true"
                    android:layout_weight=".5"
                    android:paddingLeft="@dimen/_7sdp"
                    android:src="@drawable/location"
                    app:tint="@color/text_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/address_tv"
                    android:fontFamily="@font/montserrat_regular"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="H.O.D Blood Test Centre, Opp. Metro Pillar, Sector 18, New Delhi, Delhi, India 110064"
                    android:textColor="#604E4E"
                    android:textSize="@dimen/_10ssp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/web_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/web"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/_10sdp"
                    android:src="@drawable/about_us"
                    app:tint="@color/text_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/web"
                    android:fontFamily="@font/montserrat_regular"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="www.google.com"
                    android:textColor="#604E4E"
                    android:textSize="@dimen/_10ssp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mobile_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                >

                <ImageView
                    android:id="@+id/phone"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".5"
                    android:paddingLeft="@dimen/_10sdp"
                    android:src="@drawable/contact_us"
                    app:tint="@color/text_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/phone"
                    android:fontFamily="@font/montserrat_regular"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="9015667466"
                    android:textColor="#604E4E"
                    android:textSize="@dimen/_10ssp" />

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>