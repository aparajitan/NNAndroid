<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_3sdp"
    android:layout_marginBottom="@dimen/_3sdp"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/chat_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_35sdp">

        <RelativeLayout
            android:id="@+id/root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_imageview"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:visibility="visible"
                android:src="@drawable/a2" />



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/profile_imageview"
                android:background="@drawable/chat_reciver_background"

                android:paddingTop="@dimen/_4sdp"
                android:paddingBottom="@dimen/_4sdp">

                <RelativeLayout
                    android:id="@+id/msg_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:includeFontPadding="false"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_2sdp"

                    android:text="@string/my_text"
                    android:visibility="gone"
                    android:textColor="@color/them_color"
                    android:textSize="@dimen/_9ssp" />


                <TextView
                    android:id="@+id/tvMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_subject"
                    android:fontFamily="@font/montserrat_regular"
                    android:includeFontPadding="false"
                    android:paddingLeft="@dimen/_15sdp"

                    android:text="recieve msg"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/msg_rl"
                    android:layout_toEndOf="@+id/msg_rl"

                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="11:30"
                    android:paddingRight="@dimen/_5sdp"
                    android:textColor="@color/dialog_top_color"
                    android:textSize="@dimen/_8ssp" />

            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
