<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_20sdp"
    android:layout_marginLeft="@dimen/_20sdp"
    android:layout_height="wrap_content">
    <FrameLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/round_corner_dialog"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Select your interest"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14ssp" />
            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:text="Books"
                        android:id="@+id/books_id"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/text_color"
                        android:layout_height="@dimen/_20sdp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:text="Music"
                        android:id="@+id/music_id"
                        android:textColor="@color/text_color"
                        android:layout_height="@dimen/_20sdp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:text="Social Work"
                        android:id="@+id/social_work_id"
                        android:textColor="@color/text_color"
                        android:layout_height="@dimen/_20sdp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:textColor="@color/text_color"
                        android:text="Sports"
                        android:id="@+id/sports_id"
                        android:layout_height="@dimen/_20sdp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:text="Theatre"
                        android:id="@+id/theatre_id"
                        android:textColor="@color/text_color"
                        android:layout_height="@dimen/_20sdp"/>
                </LinearLayout>
                <FrameLayout
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:id="@+id/post_id"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/button_back"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp">
                    <TextView
                        android:id="@+id/btn_update_password"
                        android:layout_width="wrap_content"
                        android:text="Ok"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:textSize="@dimen/_14ssp"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_height="wrap_content"/>
                </FrameLayout>


            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
    <androidx.cardview.widget.CardView
        android:layout_gravity="end|top"
        app:cardElevation="@dimen/_15sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardBackgroundColor="@color/white"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp">

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/oval_card_background"
            app:cardCornerRadius="@dimen/_15sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp">


            <ImageView
                android:id="@+id/iv9"
                android:src="@drawable/close_icon_p"
                android:layout_width="@dimen/_15sdp"
                android:layout_gravity="center"
                android:layout_height="@dimen/_15sdp" />

        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>


</FrameLayout>