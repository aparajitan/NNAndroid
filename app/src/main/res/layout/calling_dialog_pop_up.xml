<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_20sdp"
    android:layout_marginLeft="@dimen/_20sdp"
    android:layout_height="@dimen/_110sdp">
    <FrameLayout
        android:orientation="vertical"
        android:background="@drawable/round_corner_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_marginTop="@dimen/dialog_padding_top_gap"
                android:layout_marginBottom="@dimen/dialog_padding_top_gap"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_no"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="+918126177819"
                    android:textColor="@color/dialog_top_color"
                    android:textSize="@dimen/_15ssp" />
            </FrameLayout>
            <TextView
                android:background="@color/line_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:text="Cancel"
                    android:layout_weight="1"
                    android:id="@+id/cancel_id"
                    android:gravity="center"
                    android:textColor="#F44336"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="@dimen/_14ssp"
                    android:layout_height="match_parent"/>


                <FrameLayout
                    android:background="@color/line_color"
                    android:layout_gravity="center|top"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_35sdp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="Call"
                    android:fontFamily="@font/montserrat_medium"
                    android:id="@+id/call_id"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/green_color"
                    android:textSize="@dimen/_14ssp"
                    android:layout_height="match_parent"/>


            </LinearLayout>
        </LinearLayout>




    </FrameLayout>



</LinearLayout>