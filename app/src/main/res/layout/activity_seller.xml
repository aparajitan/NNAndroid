<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schem as.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_container"
    android:background="@color/background_color"
    tools:context=".SellerActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/header"
                layout="@layout/custom_toolbar" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_175sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/background_image">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPagerMain"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_175sdp" />


            </RelativeLayout>

            <!--            <TextView-->

            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:fontFamily="@font/montserrat_semibold"-->
            <!--                android:layout_marginLeft="@dimen/_10sdp"-->
            <!--                android:padding="@dimen/_5sdp"-->
            <!--                android:text="Item details"-->
            <!--                android:textColor="@color/white"-->
            <!--                android:textSize="@dimen/_15ssp" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/round_corner_dialog"
                android:orientation="vertical"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingTop="@dimen/_10sdp"

                        android:text="Flower pot"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp" />

                    <TextView
                        android:id="@+id/item_post_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/montserrat_medium"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingRight="@dimen/_15sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="3d"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12ssp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/brand_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="brand"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_12ssp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="2000"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_14ssp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:paddingLeft="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/nebgourhood_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"

                        android:text="nebgourhod"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:id="@+id/distance_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/nebgourhood_tv"
                        android:fontFamily="@font/montserrat_regular"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="2 km"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12ssp"
                        android:visibility="gone" />

                </RelativeLayout>

                <com.app_neighbrsnook.libraries.readmoretextview.ReadMoreTextView
                    android:id="@+id/item_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                   android:layout_gravity="fill_horizontal"
                    android:justificationMode="inter_word"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="desc"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_12ssp"
                    app:colorClickableText="@color/them_color"
                    app:trimCollapsedText="Less"
                    app:trimExpandedText="Show"
                    app:trimLength="150" />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"


                    android:paddingLeft="@dimen/_10sdp">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_imageview"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/a2"
                        app:civ_border_width="2dp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/profile_imageview"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/item_posted_by"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:text=""
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/_10ssp" />

                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutforprofileimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingRight="@dimen/_10sdp"
                    >

                    <ImageView
                        android:id="@+id/mail_iv"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginStart="-10dp"

                        android:layout_marginBottom="-10dp"
                        android:src="@drawable/mail_icon"
                        app:tint="@color/them_color" />


                    <TextView
                        android:id="@+id/text"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"


                        android:layout_marginStart="-30dp"
                        android:layout_toEndOf="@+id/mail_iv"
                        android:background="@drawable/circle_background"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8ssp"
                        android:visibility="visible" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>