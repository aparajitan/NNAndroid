<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginRight="@dimen/dialog_screen_padding_parent"
    android:layout_marginLeft="@dimen/dialog_screen_padding_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/round_corner_dialog"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_marginTop="@dimen/dialog_padding_top_gap"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/dialog_padding_top_gap"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Please send joining request"
                    android:textColor="@color/dialog_top_color"
                    android:textSize="@dimen/dialog_text_size" />
            </FrameLayout>
            <TextView
                android:background="@color/line_color_dialog"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/tv_ok_id"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Ok"
                    android:textColor="@color/green_color"
                    android:textSize="@dimen/_12ssp" />

            </FrameLayout>
        </LinearLayout>




    </FrameLayout>



</LinearLayout>