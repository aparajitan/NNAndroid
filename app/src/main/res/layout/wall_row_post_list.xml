<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:background="@drawable/round_corner_dialog"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingTop="@dimen/_10sdp"
    android:paddingRight="@dimen/_10sdp"
    android:paddingBottom="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/profile_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_imageview"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                app:civ_border_color="@color/text_color" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/profile_imageview"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:text="Mini patnaik"
                    android:textColor="@color/wall_title"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/created_date_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_tv"
                    android:fontFamily="@font/montserrat_regular"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:text="Noida 104 , 2d"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/threedot_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:src="@drawable/ic_baseline_more_vert_24"
            app:tint="@color/text_color" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/post_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/montserrat_medium"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="General"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.app_neighbrsnook.libraries.readmoretextview.ReadMoreTextView
            android:id="@+id/post_msg_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="Anyone for a carpool to Sector 29 Gurgaon please DM me."
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12ssp"
            app:colorClickableText="@color/them_color"
            app:trimCollapsedText="@string/less"
            app:trimExpandedText="@string/show"
            app:trimLength="150" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--        <ImageView-->
        <!--                    android:id="@+id/wall_image"-->
        <!--                    android:layout_width="match_parent"-->
        <!--                    android:layout_height="@dimen/_150sdp"-->
        <!--                    android:scaleType="centerCrop"-->
        <!--                    android:src="@drawable/will_skill"/>-->


        <!--        <FrameLayout-->
        <!--            android:id="@+id/wall_image"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_centerInParent="true"-->
        <!--            android:layout_marginLeft="10dp"-->
        <!--            android:layout_marginRight="10dp">-->

        <!--        </FrameLayout>-->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/wall_image_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height=".8dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/divider_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_2sdp"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/like_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/reactButton"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_17sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:src="@drawable/baseline_favorite_border_24"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/reaction_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/montserrat_semibold"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_5sdp"
                    android:text="5"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10ssp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/emoji_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/comment_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="visible">

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/chat_image"
                app:tint="@color/text_color" />

            <TextView
                android:id="@+id/comment_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center_vertical"
                android:padding="@dimen/_5sdp"
                android:text="5"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/share_imageview"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/share"
                app:tint="@color/text_color" />

            <!--            <TextView-->
            <!--                android:id="@+id/share_imageview"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="@dimen/_15sdp"-->
            <!--                android:text=""-->
            <!--                android:fontFamily="@font/montserrat_semibold"-->

            <!--                android:layout_gravity="center"-->
            <!--                android:gravity="center_vertical"-->

            <!--                android:textSize="@dimen/_12ssp"-->
            <!--                android:drawableEnd="@drawable/share"-->
            <!--                android:drawableTint="@color/text_color"-->
            <!--                android:textColor="@color/text_color"-->
            />

        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/reactions_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/background_color"
        android:visibility="gone"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/background_color">

            <ImageView
                android:id="@+id/reaction_like"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_emoji_like"
                android:layout_margin="10dp"/>

            <ImageView
                android:id="@+id/reaction_love"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_emiji_love"
                android:layout_margin="10dp" />

            <ImageView
                android:id="@+id/reaction_haha"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_emiji_haha"
                android:layout_margin="10dp" />

            <ImageView
                android:id="@+id/reaction_wow"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_emiji_wow"
                android:layout_margin="10dp" />

            <ImageView
                android:id="@+id/reaction_sad"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_emiji_party"
                android:layout_margin="10dp" />

            <ImageView
                android:id="@+id/reaction_angry"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_emiji_smart"
                android:layout_margin="10dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>