                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:textColor="@color/text_color"
                                        android:layout_height="wrap_content"
                                        android:text="4+ Sharing" />
                                </FrameLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <FrameLayout
                    android:id="@+id/upload_img_img_testing"
                    android:layout_marginTop="@dimen/background_gap_centre"
                    android:layout_marginLeft="@dimen/screens_padding_left_right"
                    android:background="@drawable/round_corner_dialog"
                    android:layout_marginRight="@dimen/screens_padding_left_right"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/upload_image_dimension">
                    <ImageView
                        android:layout_gravity="end|center_vertical"
                        android:layout_width="@dimen/upload_image_select_plus_icon"
                        android:src="@drawable/plus_icon_deemed_sec"
                        android:layout_marginRight="15dp"
                        android:layout_height="@dimen/upload_image_select_plus_icon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Upload image"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_short"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_marginLeft="@dimen/text_padding_left"
                        android:layout_height="wrap_content"/>

                </FrameLayout>
                <FrameLayout
                    android:keyboardNavigationCluster="false"
                    android:background="@drawable/round_corner_dialog"
                    android:layout_marginLeft="@dimen/screens_padding_left_right"
                    android:layout_marginRight="@dimen/screens_padding_left_right"
                    android:layout_marginTop="@dimen/background_gap_centre"
                    android:visibility="gone"
                    android:id="@+id/frm_show_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:padding="@dimen/_3sdp"
                        android:id="@+id/photos_recycler_view"
                        android:layout_height="wrap_content">
                    </androidx.recyclerview.widget.RecyclerView>
                </FrameLayout>
                <FrameLayout
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_back"
                    android:id="@+id/upload_id"
                    android:visibility="visible"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Submit"
                        android:layout_gravity="center"
                        android:textColor="@color/button_text_color"
                        android:textSize="@dimen/_14ssp"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_height="wrap_content"/>
                </FrameLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/upload_options_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#BF424040">
        <LinearLayout
            android:id="@+id/upload_ll"
            android:layout_width="@dimen/take_photo_take_picture"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cancle_tv"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/round_corner_dialog">

            <TextView
                android:id="@+id/take_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="@dimen/_5sdp"

                android:text="Take Photo"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14ssp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/line_color_dialog"/>
            <TextView
                android:id="@+id/choose_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/upload_Video"
                android:gravity="center_horizontal"
                android:padding="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="Choose Photo"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14ssp" />
        </LinearLayout>

        <TextView
            android:id="@+id/cancle_tv"
            android:layout_width="@dimen/take_photo_take_picture"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:background="@drawable/round_corner_dialog"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_14ssp" />

    </RelativeLayout>



</RelativeLayout>