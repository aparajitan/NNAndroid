<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    tools:context=".realStateModule.RoomDetails">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/yellow">
            <FrameLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="45dp"
                        android:id="@+id/back_arrow_write_review"
                        android:src="@drawable/demo_left_p"
                        android:layout_gravity="center_vertical"
                        android:layout_height="40dp" />
                    <TextView
                        android:text="Room Details"
                        android:textSize="@dimen/toolbar_text_size"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </FrameLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No.of single rooms in PG"
                    android:textColor="@color/text_color"
                    android:layout_marginLeft="@dimen/post_property_form_left_right_padding"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="@dimen/listing_bold_size" />
                <ImageView
                    android:src="@drawable/mandotry_icon"
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_8sdp"/>
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:hint="No. of single rooms in PG"
                android:layout_marginTop="@dimen/_10sdp"
                android:backgroundTintMode="@null"
                android:layout_marginRight="@dimen/post_property_form_left_right_padding"
                android:layout_marginLeft="@dimen/post_property_form_left_right_padding"
                android:backgroundTint="@null"
                android:background="@null"
                android:visibility="visible"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_short"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="010dp"
                android:background="@color/line_color"

                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rent Details"
                    android:textColor="@color/text_color"
                    android:layout_marginLeft="@dimen/post_property_form_left_right_padding"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="@dimen/listing_bold_size" />
                <ImageView
                    android:src="@drawable/mandotry_icon"
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_8sdp"/>
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:hint="Enter expected rent"
                android:layout_marginTop="@dimen/_10sdp"
                android:backgroundTintMode="@null"
                android:layout_marginRight="@dimen/post_property_form_left_right_padding"
                android:layout_marginLeft="@dimen/post_property_form_left_right_padding"
                android:backgroundTint="@null"
                android:background="@null"
                android:visibility="visible"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_short"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="010dp"
                android:background="@color/line_color"

                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Security Deposit(Optional)"
                    android:textColor="@color/text_color"
                    android:layout_marginLeft="@dimen/post_property_form_left_right_padding"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="@dimen/listing_bold_size" />
                <ImageView
                    android:src="@drawable/mandotry_icon"
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_8sdp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginLeft="@dimen/post_property_form_left_right_padding"
                    android:layout_marginRight="@dimen/post_property_form_left_right_padding"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:background="@drawable/post_unselect_background"
                        android:layout_height="@dimen/_30sdp">
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/_12ssp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textColor="@color/text_color"
                            android:layout_height="wrap_content"
                            android:text="Absolute"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/post_unselect_background"
                        android:layout_height="@dimen/_30sdp">
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/_12ssp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/text_color"
                            android:layout_height="wrap_content"
                            android:text="1 Month" />
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/post_unselect_background"
                        android:layout_height="@dimen/_30sdp">
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/_12ssp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/text_color"
                            android:layout_height="wrap_content"
                            android:text="2 Month" />
                    </FrameLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/post_property_form_left_right_padding"
                    android:layout_marginRight="@dimen/post_property_form_left_right_padding"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:background="@drawable/post_unselect_background"
                        android:layout_height="@dimen/_30sdp">
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/_12ssp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textColor="@color/text_color"
                            android:layout_height="wrap_content"
                            android:text="3 Months"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/post_unselect_background"
                        android:layout_height="@dimen/_30sdp">
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/_12ssp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/text_color"
                            android:layout_height="wrap_content"
                            android:text="6 Months" />
                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Furnishing"
                    android:textColor="@color/text_color"
                    android:layout_marginLeft="@dimen/post_property_form_left_right_padding"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="@dimen/listing_bold_size" />
                <ImageView
                    android:src="@drawable/mandotry_icon"
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_8sdp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginLeft="@dimen/post_property_form_left_right_padding"
                    android:layout_marginRight="@dimen/post_property_form_left_right_padding"
                    android:orientation="horizontal"
                    android:id="@+id/lnr_furnished"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:background="@drawable/post_unselect_background"
                        android:layout_height="@dimen/_30sdp">
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/_12ssp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textColor="@color/text_color"
                            android:layout_height="wrap_content"
                            android:text="Fully furnished"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/post_unselect_background"
                        android:layout_height="@dimen/_30sdp">
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/_12ssp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/text_color"
                            android:layout_height="wrap_content"
                            android:text="Semifurnished" />
                    </FrameLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/post_property_form_left_right_padding"
                    android:layout_marginRight="@dimen/post_property_form_left_right_padding"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:background="@drawable/post_unselect_background"
                        android:layout_height="@dimen/_30sdp">
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/_12ssp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textColor="@color/text_color"
                            android:layout_height="wrap_content"
                            android:text="Unfurnished"/>
                    </FrameLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:gravity="center"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_back"
        android:id="@+id/upload_id"
        android:visibility="visible"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height">
        <TextView
            android:layout_width="wrap_content"
            android:text="Submit"
            android:layout_gravity="center"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_height="wrap_content"/>
    </FrameLayout>



</LinearLayout>