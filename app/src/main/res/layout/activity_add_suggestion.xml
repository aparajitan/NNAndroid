<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".suggestion.AddSuggestion">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/yellow">
                <FrameLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp">
                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="40dp"
                            android:id="@+id/img_back"
                            android:src="@drawable/demo_left_p"
                            android:layout_gravity="center_vertical"
                            android:layout_height="45dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Make a Suggestion"
                                android:textSize="@dimen/_16ssp"
                                android:textColor="#fff"
                                android:fontFamily="@font/montserrat_medium"
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </androidx.appcompat.widget.Toolbar>



        </com.google.android.material.appbar.AppBarLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/background_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/screens_padding_left_right"
                    android:background="@drawable/round_corner_dialog"
                    android:layout_marginRight="@dimen/screens_padding_left_right"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <EditText
                        android:layout_width="wrap_content"
                        android:hint="Name"
                        android:id="@+id/suggestion_name_edt"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14ssp"
                        android:fontFamily="@font/montserrat_regular"
                        android:inputType="textCapWords"
                        android:backgroundTintMode="@null"
                        android:background="@null"
                        android:backgroundTint="@null"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="@dimen/screens_padding_left_right"
                    android:background="@drawable/round_corner_dialog"
                    android:layout_marginRight="@dimen/screens_padding_left_right"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <EditText
                        android:layout_width="wrap_content"
                        android:hint="Phone number"
                        android:backgroundTintMode="@null"
                        android:background="@null"
                        android:backgroundTint="@null"
                        android:inputType="number"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14ssp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_height="wrap_content"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="@dimen/screens_padding_left_right"
                    android:background="@drawable/round_corner_dialog"
                    android:layout_marginRight="@dimen/screens_padding_left_right"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <EditText
                        android:layout_width="wrap_content"
                        android:hint="Age"
                        android:backgroundTintMode="@null"
                        android:background="@null"
                        android:backgroundTint="@null"
                        android:id="@+id/suggestion_age_edt"
                        android:inputType="number"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14ssp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_height="wrap_content"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="@dimen/screens_padding_left_right"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/round_corner_dialog"
                    android:layout_marginRight="@dimen/screens_padding_left_right"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <EditText
                        android:layout_width="wrap_content"
                        android:hint="Your Rating"
                        android:backgroundTintMode="@null"
                        android:background="@null"
                        android:backgroundTint="@null"
                        android:enabled="true"
                        android:inputType="number"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14ssp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_height="wrap_content"/>
                    <RatingBar
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX=".5"

                        android:scaleY=".5"
                        android:layout_marginLeft="@dimen/_45sdp"
                        android:layout_gravity="end"
                        android:theme="@style/RatingBar"/>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/group_crt_upload_image_frm"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/upload_image_dimension"
                    android:layout_marginLeft="@dimen/screens_padding_left_right"
                    android:layout_marginTop="@dimen/background_gap_centre"
                    android:layout_marginRight="@dimen/screens_padding_left_right"
                    android:background="@drawable/round_corner_dialog">
                    <ImageView
                        android:layout_width="@dimen/upload_image_select_plus_icon"
                        android:layout_height="@dimen/upload_image_select_plus_icon"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/plus_icon_deemed_sec" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/text_padding_left"
                        android:background="@null"
                        android:backgroundTint="@null"
                        android:backgroundTintMode="@null"
                        android:fontFamily="@font/montserrat_regular"
                        android:hint="Upload Image"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14ssp" />


                </FrameLayout>
                <FrameLayout
                    android:keyboardNavigationCluster="false"
                    android:background="@drawable/round_corner_dialog"
                    android:layout_marginLeft="@dimen/screens_padding_left_right"
                    android:layout_marginRight="@dimen/screens_padding_left_right"
                    android:layout_marginTop="@dimen/background_gap_centre"
                    android:visibility="gone"
                    android:id="@+id/frm_show_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:padding="@dimen/_3sdp"
                        android:id="@+id/photos_recycler_view"
                        android:layout_height="wrap_content">
                    </androidx.recyclerview.widget.RecyclerView>
                </FrameLayout>
                <FrameLayout
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:id="@+id/upload_id_add_suggestion"
                    android:layout_marginTop="23dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/upload_button_background"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="POST"
                        android:layout_gravity="center"
                        android:textColor="@color/button_text_color"
                        android:textSize="@dimen/button_size"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"/>

                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/upload_options_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#BF424040">
        <LinearLayout
            android:id="@+id/upload_ll"
            android:layout_width="@dimen/take_photo_take_picture"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cancle_tv"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/round_corner_dialog">
            <TextView
                android:id="@+id/take_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="@dimen/_5sdp"

                android:text="Take Photo"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14ssp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/line_color_dialog"/>

            <TextView
                android:id="@+id/choose_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/upload_Video"
                android:gravity="center_horizontal"
                android:padding="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="Choose Photo"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14ssp" />

        </LinearLayout>

        <TextView
            android:id="@+id/cancle_tv"
            android:layout_width="@dimen/take_photo_take_picture"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:background="@drawable/round_corner_dialog"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_14ssp" />

    </RelativeLayout>



</RelativeLayout>