<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_20sdp"
    android:layout_marginLeft="@dimen/_20sdp"
    android:layout_height="wrap_content">
    <FrameLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/round_corner_dialog"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Review"
                    android:textColor="@color/dialog_top_color"
                    android:textSize="@dimen/_12ssp" />
            <TextView
                android:fontFamily="@font/montserrat_regular"
                android:layout_width="wrap_content"
                android:text="Rate your experiance with Amarpal singh"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_11ssp"
                android:layout_height="wrap_content"/>
            <RatingBar
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:numStars="5"
                android:layout_marginLeft="@dimen/_15sdp"
                android:theme="@style/customRatingBar"/>
            <FrameLayout
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:background="@drawable/add_comment_background"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_height="@dimen/_100sdp">
                <EditText
                    android:layout_width="match_parent"
                    android:textColor="@color/text_color"
                    android:background="@null"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:backgroundTint="@null"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/montserrat_regular"
                    android:justificationMode="inter_word"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:hint="Please add comment for plumber amarpal singh"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
            <FrameLayout
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="@dimen/_10sdp"
                android:id="@+id/post_id"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/suggestion_review_btn_background"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp">
                <TextView
                    android:id="@+id/btn_update_password"
                    android:layout_width="wrap_content"
                    android:text="SUBMIT"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:layout_gravity="end|top"
        app:cardElevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardBackgroundColor="@color/white"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp">
        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/oval_card_background"
            app:cardCornerRadius="@dimen/_15sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp">
            <ImageView
                android:id="@+id/iv9"
                android:src="@drawable/close_icon_p"
                android:layout_width="@dimen/_15sdp"
                android:layout_gravity="center"
                android:layout_height="@dimen/_15sdp" />

        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>




</FrameLayout>