<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/root"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_centerVertical="true"
    android:orientation="vertical"

    android:background="@drawable/round_corner_dialog"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/show_hide_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp">

        <TextView
            android:id="@+id/question_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/down_iv"
            android:fontFamily="@font/montserrat_medium"

            android:paddingRight="@dimen/_5sdp"
            android:text="name"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12ssp" />

        <ImageView
            android:id="@+id/down_iv"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/up_iv"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
            app:tint="@color/black" />



    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ans_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:visibility="gone"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/question_tv"
            android:background="@color/divider_color"
            android:padding="@dimen/_2sdp" />

        <TextView
            android:id="@+id/ans_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:paddingBottom="@dimen/_5sdp"
            android:text="name"
            android:layout_gravity="center_vertical"
            android:paddingTop="@dimen/_5sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_11ssp" />

    </LinearLayout>







</LinearLayout>