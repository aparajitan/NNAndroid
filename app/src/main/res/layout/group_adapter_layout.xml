<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/lnr_root"
    android:background="@color/background_color"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/globalPaddingList"
        android:background="@drawable/round_corner_dialog">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_7sdp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_45sdp"
                        app:cardCornerRadius="@dimen/_5sdp">

                        <ImageView
                            android:src="@drawable/group_default_image"
                            android:id="@+id/id_one_image"
                            android:scaleType="fitXY"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/amar_dubey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="start"
                        android:text="Mohd arsad ali pasah"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_9ssp" />

                    <TextView
                        android:id="@+id/neighbrhood_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Sector 104"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_9ssp" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnr_group_join"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:gravity="start">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/group_name_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="start"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="Amar Dubey"
                                    android:textColor="@color/yellow"
                                    android:textSize="@dimen/_10ssp" />
                                <TextView
                                    android:id="@+id/who_can_join"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:text="Private"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/about"
                                    android:layout_width="@dimen/_90sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:gravity="start"
                                    android:visibility="gone"
                                    android:text="55 Members"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/_12ssp" />
                            </LinearLayout>
                        </LinearLayout>
                        <FrameLayout
                            android:layout_width="@dimen/_42sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="end"
                            android:layout_marginRight="@dimen/_7sdp"
                            android:background="@drawable/card_view_background_suggestion"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_15sdp"
                                android:background="@drawable/card_view_suggestion_second"
                                android:gravity="start">

                                <TextView
                                    android:id="@+id/tv_all_members"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="@dimen/_2sdp"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="25"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12ssp" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_7sdp"
                                android:fontFamily="@font/montserrat_regular"
                                android:text="Members"
                                android:textColor="#717171"
                                android:textSize="@dimen/_8ssp" />
                        </FrameLayout>

                    </FrameLayout>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/_17sdp"
                        android:layout_height="@dimen/_17sdp"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/arsad_pic"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/frm_join_id"
            android:visibility="gone"
            android:layout_width="@dimen/_65sdp"
            android:layout_height="@dimen/_23sdp"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_7sdp"
            android:background="@drawable/green_background_btn">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_medium"
                android:text="Join"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/frm_request_pending"
            android:visibility="gone"
            android:layout_gravity="end|bottom|center_vertical"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_7sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_23sdp"
                android:background="@drawable/request_pending_background2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Request Pending"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp" />
            </FrameLayout>
            <TextView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:background="@drawable/request_pending_background_oval_shape"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:text="1"
                android:id="@+id/tv_request_count"
                android:layout_gravity="top|end"
                android:textColor="#BF360C"
                android:textSize="@dimen/_8ssp"
                android:visibility="visible" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/frm_exit"
            android:visibility="gone"
            android:layout_width="@dimen/_65sdp"
            android:layout_height="@dimen/_23sdp"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_7sdp"
            android:background="@drawable/red_backgound">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_medium"
                android:text="Exit"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/frm_approval_pending"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_23sdp"
            android:layout_marginRight="@dimen/_7sdp"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/approval_pending_background"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_approval_pending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/montserrat_medium"
                android:text="Approval Pending"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"/>
        </FrameLayout>
        <FrameLayout
            android:layout_gravity="end|bottom"
            android:visibility="gone"
            android:id="@+id/frm_owner_id"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_7sdp"
            android:layout_width="@dimen/_65sdp"
            android:background="@drawable/owner_backgruond"
            android:layout_height="@dimen/_23sdp">
            <TextView
                android:id="@+id/tv_owner_show_text"
                android:layout_width="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Owner"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>
        </FrameLayout>






    </FrameLayout>


</LinearLayout>