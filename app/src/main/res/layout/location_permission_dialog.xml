<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:elevation="8dp">

    <!-- Red location icon with cross -->
    <ImageView
        android:id="@+id/img_location_status"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/location_icon_cross"
        android:layout_gravity="center"
        android:contentDescription="Location icon" />

    <!-- Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location permission not enabled"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:gravity="center" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enable location access so we can assign you to the right neighbourhood."
        android:textColor="#888888"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Enable device location (Red icon + text) -->
    <LinearLayout
        android:id="@+id/btn_enable_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/location_dialog_step2"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable device location"
            android:textColor="#D32F2F"
            android:textSize="15sp" />
    </LinearLayout>

    <!-- Enter location manually (Grey icon + text) -->
    <LinearLayout
        android:id="@+id/btn_enter_location_manually"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/search_icon_p"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter location manually"
            android:textColor="#555555"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>
