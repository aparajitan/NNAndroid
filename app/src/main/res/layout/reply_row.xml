<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_8sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/_35sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/reply_profile_image"
            android:layout_width="@dimen/_27sdp"
            android:layout_height="@dimen/_27sdp"
            android:src="@drawable/profile"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_8sdp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/reply_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Replier Name"
                    android:textSize="@dimen/_9ssp"
                    android:textColor="@color/them_color"
                    android:fontFamily="@font/montserrat_semibold" />

                <TextView
                    android:id="@+id/reply_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" â€¢ 1h ago"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@color/secondary_text_color"
                    android:layout_marginStart="@dimen/_4sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/at_sign"
                    android:textColor="@color/colorProgress"
                    android:textSize="@dimen/_7ssp" />

                <TextView
                    android:id="@+id/reply_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Reply Username"
                    android:textColor="@color/colorProgress"
                    android:textSize="@dimen/_7ssp" />

            </LinearLayout>

            <TextView
                android:id="@+id/reply_message_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is a sample reply."
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/text_color"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_10sdp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_72sdp">

        <ImageView
            android:id="@+id/iv_comment_like"
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_14sdp"
            android:src="@drawable/ic_outline_favorite_border_24"
            android:layout_marginRight="@dimen/_5sdp"/>

        <TextView
            android:id="@+id/tv_total_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/montserrat_semibold"
            android:drawablePadding="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/reply_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reply"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_9ssp"
            android:fontFamily="@font/montserrat_semibold"
            android:drawablePadding="@dimen/_5sdp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/view_replies_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View 3 more replies"
        android:textColor="@color/secondary_text_color"
        android:textSize="@dimen/_10ssp"
        android:fontFamily="@font/montserrat_semibold"
        android:drawablePadding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_65sdp"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/nested_replies_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:visibility="gone" />

</LinearLayout>
