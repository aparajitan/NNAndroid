<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/root"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_5sdp"
            android:src="@drawable/user_icon_p" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_toEndOf="@+id/category_name_iv"
            android:gravity="center_vertical"
            android:padding="@dimen/_7sdp"
            >

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:text="name"
                android:textColor="@color/them_color"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/montserrat_medium"
                android:text="name"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/product_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_tv"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/montserrat_medium"
                android:text="Flower pot"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/product_name_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_name_tv"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/montserrat_medium"
                android:paddingBottom="@dimen/_5sdp"
                android:text="is this prouct is available"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_10ssp" />


        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"/>


</LinearLayout>