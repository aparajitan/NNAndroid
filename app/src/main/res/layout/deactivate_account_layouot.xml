<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_20sdp"
    android:layout_marginLeft="@dimen/_20sdp"
    android:layout_height="wrap_content">

    <FrameLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/round_corner_dialog"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Are you sure you want to deactivate your account"
                    android:textColor="@color/dialog_top_color"
                    android:textSize="@dimen/_12ssp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_12ssp"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="How many days you want to"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_12ssp"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="deactivate your account"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="Please input Days"
                    android:maxLength="100"
                    android:layout_gravity="center_horizontal"
                    android:maxLines="1"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_70sdp"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_color"
                    android:textSize="@dimen/_12sdp" />


            </FrameLayout>
            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/line_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Cancel"
                    android:gravity="center"
                    android:id="@+id/tv_cancel_dialog"
                    android:textColor="@color/text_color"
                    android:layout_marginLeft="@dimen/_65sdp"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/_12ssp"
                    android:layout_height="wrap_content"/>


                <FrameLayout
                    android:background="@color/line_color"
                    android:layout_gravity="center|top"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_35sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Ok"
                    android:id="@+id/tv_yes_id"
                    android:textColor="@color/green_color"
                    android:layout_gravity="center_vertical|end"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginRight="@dimen/_65sdp"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
    <androidx.cardview.widget.CardView
        android:layout_gravity="end|top"
        app:cardElevation="@dimen/_15sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardBackgroundColor="@color/white"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp">

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/oval_card_background"
            app:cardCornerRadius="@dimen/_15sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp">


            <ImageView
                android:id="@+id/iv9"
                android:src="@drawable/close_icon_p"
                android:layout_width="@dimen/_15sdp"
                android:layout_gravity="center"
                android:layout_height="@dimen/_15sdp" />

        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>

</FrameLayout>