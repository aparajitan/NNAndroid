<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/root"
    android:layout_marginTop="@dimen/globalPaddingList"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:orientation="horizontal"
    android:background="@drawable/round_corner_dialog_themcolor"
   android:layout_centerVertical="true"
    android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/category_name_iv"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_2sdp"
            android:src="@drawable/ic_baseline_report_gmailerrorred_24"
            app:tint="@color/white" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:background="@drawable/round_corner_notification"
        android:layout_toEndOf="@+id/category_name_iv"
        android:gravity="center_vertical"
        android:padding="@dimen/_7sdp"
      >

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/montserrat_semibold"

            android:text="name"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/montserrat_regular"

            android:text=""
            android:layout_alignParentEnd="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_tv"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/montserrat_medium"
            android:text="name"
            android:paddingBottom="@dimen/_5sdp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_10ssp" />


    </RelativeLayout>

</LinearLayout>